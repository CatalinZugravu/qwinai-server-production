<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- =============================================================== -->
    <!-- MAIN APPLICATION THEME - MATERIAL DESIGN 3 DARK MODE          -->
    <!-- =============================================================== -->
    <style name="AppTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Material Design 3 Primary Colors -->
        <item name="colorPrimary">@color/md_theme_dark_primary</item>
        <item name="colorOnPrimary">@color/md_theme_dark_onPrimary</item>
        <item name="colorPrimaryContainer">@color/md_theme_dark_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/md_theme_dark_onPrimaryContainer</item>
        
        <!-- Material Design 3 Secondary Colors -->
        <item name="colorSecondary">@color/md_theme_dark_secondary</item>
        <item name="colorOnSecondary">@color/md_theme_dark_onSecondary</item>
        <item name="colorSecondaryContainer">@color/md_theme_dark_secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/md_theme_dark_onSecondaryContainer</item>
        
        <!-- Material Design 3 Tertiary Colors -->
        <item name="colorTertiary">@color/md_theme_dark_tertiary</item>
        <item name="colorOnTertiary">@color/md_theme_dark_onTertiary</item>
        <item name="colorTertiaryContainer">@color/md_theme_dark_tertiaryContainer</item>
        <item name="colorOnTertiaryContainer">@color/md_theme_dark_onTertiaryContainer</item>
        
        <!-- Material Design 3 Error Colors -->
        <item name="colorError">@color/md_theme_dark_error</item>
        <item name="colorOnError">@color/md_theme_dark_onError</item>
        <item name="colorErrorContainer">@color/md_theme_dark_errorContainer</item>
        <item name="colorOnErrorContainer">@color/md_theme_dark_onErrorContainer</item>
        
        <!-- Material Design 3 Surface Colors -->
        <item name="colorSurface">@color/md_theme_dark_surface</item>
        <item name="colorOnSurface">@color/md_theme_dark_onSurface</item>
        <item name="colorSurfaceVariant">@color/md_theme_dark_surfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/md_theme_dark_onSurfaceVariant</item>
        
        <!-- Material Design 3 Background Colors -->
        <item name="android:colorBackground">@color/md_theme_dark_background</item>
        <item name="colorOnBackground">@color/md_theme_dark_onBackground</item>
        
        <!-- Material Design 3 Outline Colors -->
        <item name="colorOutline">@color/md_theme_dark_outline</item>
        <item name="colorOutlineVariant">@color/md_theme_dark_outlineVariant</item>
        
        <!-- Material Design 3 Inverse Colors -->
        <item name="colorSurfaceInverse">@color/md_theme_dark_inverseSurface</item>
        <item name="colorOnSurfaceInverse">@color/md_theme_dark_inverseOnSurface</item>
        <item name="colorPrimaryInverse">@color/md_theme_dark_inversePrimary</item>
        
        <!-- System UI Colors -->
        <item name="android:statusBarColor">@color/md_theme_dark_surface</item>
        <item name="android:navigationBarColor">@color/md_theme_dark_surface</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
        
        <!-- Text Colors -->
        <item name="android:textColorPrimary">@color/md_theme_dark_onSurface</item>
        <item name="android:textColorSecondary">@color/md_theme_dark_onSurfaceVariant</item>
        
        <!-- Legacy compatibility -->
        <item name="colorAccent">@color/md_theme_dark_secondary</item>
        <item name="colorPrimaryDark">@color/md_theme_dark_primary</item>
        <item name="colorPrimaryVariant">@color/md_theme_dark_primaryContainer</item>
        
        <!-- Material Components -->
        <item name="materialButtonStyle">@style/Widget.App.Button</item>
        <item name="cardViewStyle">@style/Widget.App.CardView</item>
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.App.MaterialAlertDialog</item>
        <item name="textInputStyle">@style/Widget.App.TextInputLayout</item>
        <item name="tabStyle">@style/Widget.App.TabLayout</item>
    </style>

    <!-- =============================================================== -->
    <!-- MATERIAL DESIGN 3 COMPONENT STYLES - DARK MODE                -->
    <!-- =============================================================== -->
    
    <!-- Button Styles -->
    <style name="Widget.App.Button" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/md_theme_dark_primary</item>
        <item name="android:textColor">@color/md_theme_dark_onPrimary</item>
        <item name="rippleColor">@color/md_theme_dark_primaryContainer</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="Widget.App.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/md_theme_dark_outline</item>
        <item name="android:textColor">@color/md_theme_dark_primary</item>
        <item name="rippleColor">@color/md_theme_dark_primaryContainer</item>
        <item name="cornerRadius">12dp</item>
    </style>
    
    <style name="Widget.App.Button.Text" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/md_theme_dark_primary</item>
        <item name="rippleColor">@color/md_theme_dark_primaryContainer</item>
        <item name="cornerRadius">12dp</item>
    </style>
    
    <!-- Card Styles -->
    <style name="Widget.App.CardView" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/md_theme_dark_surface</item>
        <item name="cardElevation">2dp</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="strokeWidth">0dp</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="rippleColor">@color/md_theme_dark_primaryContainer</item>
    </style>
    
    <style name="Widget.App.CardView.Filled" parent="Widget.Material3.CardView.Filled">
        <item name="cardBackgroundColor">@color/md_theme_dark_surfaceVariant</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="strokeWidth">0dp</item>
    </style>
    
    <style name="Widget.App.CardView.Outlined" parent="Widget.Material3.CardView.Outlined">
        <item name="cardBackgroundColor">@color/md_theme_dark_surface</item>
        <item name="strokeColor">@color/md_theme_dark_outline</item>
        <item name="strokeWidth">1dp</item>
        <item name="cardCornerRadius">16dp</item>
    </style>
    
    <!-- Text Input Styles -->
    <style name="Widget.App.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/md_theme_dark_primary</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="hintTextColor">@color/md_theme_dark_onSurfaceVariant</item>
        <item name="android:textColorHint">@color/md_theme_dark_onSurfaceVariant</item>
    </style>
    
    <!-- Tab Layout Styles -->
    <style name="Widget.App.TabLayout" parent="Widget.Material3.TabLayout">
        <item name="tabBackground">@color/md_theme_dark_surface</item>
        <item name="tabTextColor">@color/md_theme_dark_onSurfaceVariant</item>
        <item name="tabSelectedTextColor">@color/md_theme_dark_primary</item>
        <item name="tabIndicatorColor">@color/md_theme_dark_primary</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabTextAppearance">@style/TextAppearance.App.Tab</item>
        <item name="tabRippleColor">@color/md_theme_dark_primaryContainer</item>
    </style>
    
    <!-- Dialog Styles -->
    <style name="ThemeOverlay.App.MaterialAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="colorSurface">@color/md_theme_dark_surface</item>
        <item name="colorOnSurface">@color/md_theme_dark_onSurface</item>
        <item name="buttonBarPositiveButtonStyle">@style/Widget.App.Button.Text</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.App.Button.Text</item>
        <item name="buttonBarNeutralButtonStyle">@style/Widget.App.Button.Text</item>
        <item name="alertDialogStyle">@style/MaterialAlertDialog.App</item>
    </style>
    
    <style name="MaterialAlertDialog.App" parent="MaterialAlertDialog.Material3">
        <item name="shapeAppearance">@style/ShapeAppearance.App.MediumComponent</item>
        <item name="backgroundTint">@color/md_theme_dark_surface</item>
    </style>

    <!-- =============================================================== -->
    <!-- TEXT APPEARANCES - DARK MODE                                   -->
    <!-- =============================================================== -->
    
    <style name="TextAppearance.App.Tab" parent="TextAppearance.Material3.TitleSmall">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="textAllCaps">false</item>
        <item name="android:letterSpacing">0.02</item>
    </style>
    
    <style name="TextAppearance.App.Headline" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/md_theme_dark_onSurface</item>
    </style>
    
    <style name="TextAppearance.App.Body" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textColor">@color/md_theme_dark_onSurface</item>
        <item name="android:lineSpacingExtra">2dp</item>
    </style>
    
    <style name="TextAppearance.App.Caption" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textColor">@color/md_theme_dark_onSurfaceVariant</item>
    </style>

    <!-- =============================================================== -->
    <!-- LEGACY COMPATIBILITY STYLES - DARK MODE                       -->
    <!-- =============================================================== -->
    
    <!-- Keep these for backward compatibility with existing layouts -->
    <style name="Theme.MyApp" parent="AppTheme" />
    <style name="Theme.QwinAI" parent="AppTheme" />
    <style name="Theme.QwinAI.NoActionBar" parent="AppTheme" />
    
    <!-- Custom Tab Text Style for existing components -->
    <style name="CustomTabTextAppearance" parent="TextAppearance.App.Tab">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="TabTextStyle" parent="TextAppearance.App.Tab">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>
    
    <!-- Toolbar title style -->
    <style name="ToolbarTitle">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/md_theme_dark_onSurface</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="EditMessageDialogTheme" parent="Theme.Material3.DayNight.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:windowAnimationStyle">@style/EditMessageDialogAnimation</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowElevation">0dp</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="colorSurface">@color/md_theme_dark_surface</item>
        <item name="colorOnSurface">@color/md_theme_dark_onSurface</item>
    </style>

    <!-- =============================================================== -->
    <!-- MESSAGE TEXT STYLES - DARK MODE                                -->
    <!-- =============================================================== -->
    
    <style name="UserMessageTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/source_sans_pro</item>
        <item name="android:textColor">@color/md_theme_dark_onSurface</item>
        <item name="android:lineSpacingExtra">2dp</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <style name="AiMessageTextStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/md_theme_dark_onSurface</item>
        <item name="android:lineSpacingExtra">3dp</item>
        <item name="android:letterSpacing">0.005</item>
    </style>

    <style name="MessageTimestampStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/source_sans_pro</item>
        <item name="android:textColor">@color/md_theme_dark_onSurfaceVariant</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <style name="StatusTextStyle">
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/md_theme_dark_onSurfaceVariant</item>
        <item name="android:letterSpacing">0.01</item>
    </style>
    
</resources>