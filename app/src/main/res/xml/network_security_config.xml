<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <domain-config cleartextTrafficPermitted="true">
        <!-- AppLovin domains -->
        <domain includeSubdomains="true">applovin.com</domain>
        <domain includeSubdomains="true">applvn.com</domain>
        <domain includeSubdomains="true">safedk.com</domain>

        <!-- IronSource domains -->
        <domain includeSubdomains="true">ironsrc.com</domain>
        <domain includeSubdomains="true">supersonic.com</domain>
        <domain includeSubdomains="true">supersonicads.com</domain>
        <domain includeSubdomains="true">ironsource.mobi</domain>

        <!-- Huawei domains -->
        <domain includeSubdomains="true">hwcloudtest.cn</domain>
        <domain includeSubdomains="true">huawei.com</domain>
        <domain includeSubdomains="true">vmall.com</domain>
        <domain includeSubdomains="true">hicloud.com</domain>

        <!-- Google/AdMob domains -->
        <domain includeSubdomains="true">googleadservices.com</domain>
        <domain includeSubdomains="true">googlesyndication.com</domain>
        <domain includeSubdomains="true">google.com</domain>
        <domain includeSubdomains="true">doubleclick.net</domain>
    </domain-config>

    <!-- Base configuration for all other domains -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system"/>
        </trust-anchors>
    </base-config>
</network-security-config>