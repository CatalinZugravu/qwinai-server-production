<?xml version="1.0" encoding="utf-8"?>
<paths xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- External storage -->
    <external-files-path
        name="app_images"
        path="Pictures/" />
    <external-files-path
        name="ai_generated_images"
        path="Pictures/AI_Generated/" />
    <external-files-path
        name="app_documents"
        path="Documents/" />
    <external-files-path
        name="generated_files"
        path="Documents/Generated/" />

    <!-- Internal storage -->
    <files-path
        name="internal_files"
        path="." />

    <!-- Cache directories -->
    <cache-path
        name="app_cache"
        path="cache/" />
    <external-cache-path
        name="external_app_cache"
        path="." />

    <!-- Root paths with restrictions -->
    <root-path
        name="root"
        path="." />
</paths>
