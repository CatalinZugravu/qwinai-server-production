<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- =============================================================== -->
    <!-- MAIN APPLICATION THEME - MATERIAL DESIGN 3                    -->
    <!-- =============================================================== -->
    <style name="AppTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Material Design 3 Primary Colors -->
        <item name="colorPrimary">@color/md_theme_light_primary</item>
        <item name="colorOnPrimary">@color/md_theme_light_onPrimary</item>
        <item name="colorPrimaryContainer">@color/md_theme_light_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/md_theme_light_onPrimaryContainer</item>
        
        <!-- Material Design 3 Secondary Colors -->
        <item name="colorSecondary">@color/md_theme_light_secondary</item>
        <item name="colorOnSecondary">@color/md_theme_light_onSecondary</item>
        <item name="colorSecondaryContainer">@color/md_theme_light_secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/md_theme_light_onSecondaryContainer</item>

        <!-- Material Design 3 Tertiary Colors -->
        <item name="colorTertiary">@color/md_theme_light_tertiary</item>
        <item name="colorOnTertiary">@color/md_theme_light_onTertiary</item>
        <item name="colorTertiaryContainer">@color/md_theme_light_tertiaryContainer</item>
        <item name="colorOnTertiaryContainer">@color/md_theme_light_onTertiaryContainer</item>
        
        <!-- Material Design 3 Error Colors -->
        <item name="colorError">@color/md_theme_light_error</item>
        <item name="colorOnError">@color/md_theme_light_onError</item>
        <item name="colorErrorContainer">@color/md_theme_light_errorContainer</item>
        <item name="colorOnErrorContainer">@color/md_theme_light_onErrorContainer</item>
        
        <!-- Material Design 3 Surface Colors -->
        <item name="colorSurface">@color/md_theme_light_surface</item>
        <item name="colorOnSurface">@color/md_theme_light_onSurface</item>
        <item name="colorSurfaceVariant">@color/md_theme_light_surfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/md_theme_light_onSurfaceVariant</item>
        
        <!-- Material Design 3 Background Colors -->
        <item name="android:colorBackground">@color/md_theme_light_background</item>
        <item name="colorOnBackground">@color/md_theme_light_onBackground</item>
        
        <!-- Material Design 3 Outline Colors -->
        <item name="colorOutline">@color/md_theme_light_outline</item>
        <item name="colorOutlineVariant">@color/md_theme_light_outlineVariant</item>
        
        <!-- Material Design 3 Inverse Colors -->
        <item name="colorSurfaceInverse">@color/md_theme_light_inverseSurface</item>
        <item name="colorOnSurfaceInverse">@color/md_theme_light_inverseOnSurface</item>
        <item name="colorPrimaryInverse">@color/md_theme_light_inversePrimary</item>
        
        <!-- System UI Colors -->
        <item name="android:statusBarColor">@color/md_theme_light_surface</item>
        <item name="android:navigationBarColor">@color/md_theme_light_surface</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
        
        <!-- Text Colors -->
        <item name="android:textColorPrimary">@color/md_theme_light_onSurface</item>
        <item name="android:textColorSecondary">@color/md_theme_light_onSurfaceVariant</item>
        
        <!-- Legacy compatibility -->
        <item name="colorAccent">@color/md_theme_light_secondary</item>
        <item name="colorPrimaryDark">@color/md_theme_light_primary</item>
        <item name="colorPrimaryVariant">@color/md_theme_light_primaryContainer</item>
        
        <!-- Material Components -->
        <item name="materialButtonStyle">@style/Widget.App.Button</item>
        <item name="cardViewStyle">@style/Widget.App.CardView</item>
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.App.MaterialAlertDialog</item>
        <item name="textInputStyle">@style/Widget.App.TextInputLayout</item>
        <item name="tabStyle">@style/Widget.App.TabLayout</item>
    </style>

    <!-- =============================================================== -->
    <!-- MATERIAL DESIGN 3 COMPONENT STYLES                             -->
    <!-- =============================================================== -->
    
    <!-- Button Styles -->
    <style name="Widget.App.Button" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/md_theme_light_primary</item>
        <item name="android:textColor">@color/md_theme_light_onPrimary</item>
        <item name="rippleColor">@color/md_theme_light_primaryContainer</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    <style name="ShapeAppearanceOverlay.Corner50" parent="">
        <item name="cornerSize">50%</item>
        <item name="cornerFamily">rounded</item>
    </style>


    <style name="Widget.App.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/md_theme_light_outline</item>
        <item name="android:textColor">@color/md_theme_light_primary</item>
        <item name="rippleColor">@color/md_theme_light_primaryContainer</item>
        <item name="cornerRadius">12dp</item>
    </style>
    
    <style name="Widget.App.Button.Text" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/md_theme_light_primary</item>
        <item name="rippleColor">@color/md_theme_light_primaryContainer</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <!-- Card Styles -->
    <style name="Widget.App.CardView" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/md_theme_light_surface</item>
        <item name="cardElevation">2dp</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="strokeWidth">0dp</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="rippleColor">@color/md_theme_light_primaryContainer</item>
    </style>
    
    <style name="Widget.App.CardView.Filled" parent="Widget.Material3.CardView.Filled">
        <item name="cardBackgroundColor">@color/md_theme_light_surfaceVariant</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="strokeWidth">0dp</item>
    </style>
    
    <style name="Widget.App.CardView.Outlined" parent="Widget.Material3.CardView.Outlined">
        <item name="cardBackgroundColor">@color/md_theme_light_surface</item>
        <item name="strokeColor">@color/md_theme_light_outline</item>
        <item name="strokeWidth">1dp</item>
        <item name="cardCornerRadius">16dp</item>
    </style>
    
    <!-- Text Input Styles -->
    <style name="Widget.App.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/md_theme_light_primary</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="hintTextColor">@color/md_theme_light_onSurfaceVariant</item>
        <item name="android:textColorHint">@color/md_theme_light_onSurfaceVariant</item>
    </style>
    
    <!-- Tab Layout Styles -->
    <style name="Widget.App.TabLayout" parent="Widget.Material3.TabLayout">
        <item name="tabBackground">@color/md_theme_light_surface</item>
        <item name="tabTextColor">@color/md_theme_light_onSurfaceVariant</item>
        <item name="tabSelectedTextColor">@color/md_theme_light_primary</item>
        <item name="tabIndicatorColor">@color/md_theme_light_primary</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabTextAppearance">@style/TextAppearance.App.Tab</item>
        <item name="tabRippleColor">@color/md_theme_light_primaryContainer</item>
    </style>
    
    <!-- Dialog Styles -->
    <style name="ThemeOverlay.App.MaterialAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="colorSurface">@color/md_theme_light_surface</item>
        <item name="colorOnSurface">@color/md_theme_light_onSurface</item>
        <item name="buttonBarPositiveButtonStyle">@style/Widget.App.Button.Text</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.App.Button.Text</item>
        <item name="buttonBarNeutralButtonStyle">@style/Widget.App.Button.Text</item>
        <item name="alertDialogStyle">@style/MaterialAlertDialog.App</item>
    </style>
    
    <style name="MaterialAlertDialog.App" parent="MaterialAlertDialog.Material3">
        <item name="shapeAppearance">@style/ShapeAppearance.App.MediumComponent</item>
        <item name="backgroundTint">@color/md_theme_light_surface</item>
    </style>

    <!-- =============================================================== -->
    <!-- TEXT APPEARANCES                                                -->
    <!-- =============================================================== -->
    
    <style name="TextAppearance.App.Tab" parent="TextAppearance.Material3.TitleSmall">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="textAllCaps">false</item>
        <item name="android:letterSpacing">0.02</item>
    </style>
    
    <style name="TextAppearance.App.Headline" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/md_theme_light_onSurface</item>
    </style>
    
    <style name="TextAppearance.App.Body" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textColor">@color/md_theme_light_onSurface</item>
        <item name="android:lineSpacingExtra">2dp</item>
    </style>
    
    <style name="TextAppearance.App.Caption" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textColor">@color/md_theme_light_onSurfaceVariant</item>
    </style>

    <!-- =============================================================== -->
    <!-- SHAPE APPEARANCES                                               -->
    <!-- =============================================================== -->
    
    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerSize">8dp</item>
        <item name="cornerFamily">rounded</item>
    </style>
    
    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerSize">16dp</item>
        <item name="cornerFamily">rounded</item>
    </style>
    
    <style name="ShapeAppearance.App.LargeComponent" parent="ShapeAppearance.Material3.LargeComponent">
        <item name="cornerSize">24dp</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <!-- =============================================================== -->
    <!-- LEGACY COMPATIBILITY STYLES                                    -->
    <!-- =============================================================== -->
    
    <!-- Keep these for backward compatibility with existing layouts -->
    <style name="Theme.MyApp" parent="AppTheme" />
    <style name="Theme.QwinAI" parent="AppTheme" />
    <style name="Theme.QwinAI.NoActionBar" parent="AppTheme" />
    
    <!-- Custom Tab Text Style for existing components -->
    <style name="CustomTabTextAppearance" parent="TextAppearance.App.Tab">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="TabTextStyle" parent="TextAppearance.App.Tab">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>
    
    <!-- Top rounded corners for bottom sheets -->
    <style name="ShapeAppearanceOverlay.TopRounded" parent="">
        <item name="cornerSizeTopLeft">24dp</item>
        <item name="cornerSizeTopRight">24dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>
    
    <!-- Toolbar title style -->
    <style name="ToolbarTitle">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/md_theme_light_onSurface</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <!-- Dialog animations -->
    <style name="SpinnerDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>
    
    <style name="EditMessageDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>
    
    <style name="DialogSlideAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>
    
    <style name="EditMessageDialogTheme" parent="Theme.Material3.DayNight.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:windowAnimationStyle">@style/EditMessageDialogAnimation</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowElevation">0dp</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="colorSurface">@color/md_theme_light_surface</item>
        <item name="colorOnSurface">@color/md_theme_light_onSurface</item>
    </style>

    <!-- =============================================================== -->
    <!-- MESSAGE TEXT STYLES                                            -->
    <!-- =============================================================== -->
    
    <style name="UserMessageTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/source_sans_pro</item>
        <item name="android:textColor">@color/md_theme_light_onSurface</item>
        <item name="android:lineSpacingExtra">2dp</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <style name="AiMessageTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/ai_response_text_primary</item>
        <item name="android:lineSpacingExtra">6dp</item>
        <item name="android:lineSpacingMultiplier">1.3</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontWeight">200</item>
        <item name="android:alpha">0.95</item>
    </style>

    <style name="MessageTimestampStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/source_sans_pro</item>
        <item name="android:textColor">@color/md_theme_light_onSurfaceVariant</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <style name="StatusTextStyle">
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/md_theme_light_onSurfaceVariant</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <!-- =============================================================== -->
    <!-- MISSING STYLES                                                 -->
    <!-- =============================================================== -->
    
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.Material3.ActionBar">
        <item name="colorSurface">@color/md_theme_light_surface</item>
        <item name="colorOnSurface">@color/md_theme_light_onSurface</item>
    </style>
    
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.Material3.Toolbar.Surface">
        <item name="colorSurface">@color/md_theme_light_surface</item>
        <item name="colorOnSurface">@color/md_theme_light_onSurface</item>
    </style>
    
    <style name="ShapeAppearance.App.StartRounded" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerSizeTopLeft">12dp</item>
        <item name="cornerSizeBottomLeft">12dp</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <!-- =============================================================== -->
    <!-- BEAUTIFUL ULTRA-THIN AI RESPONSE STYLES                        -->
    <!-- =============================================================== -->
    
    <!-- Enhanced AI Response Text with Ultra-Thin Typography -->
    <style name="UltraThinAiMessageStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:textColor">@color/ai_response_text_primary</item>
        <item name="android:lineSpacingExtra">6dp</item>
        <item name="android:lineSpacingMultiplier">1.3</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontWeight">100</item>
        <item name="android:alpha">0.95</item>
    </style>

    <!-- Beautiful AI Response Heading Style -->
    <style name="AiResponseHeadingStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/ai_response_heading_color</item>
        <item name="android:lineSpacingExtra">4dp</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontWeight">300</item>
    </style>

    <!-- Ultra-Elegant AI Response Subheading -->
    <style name="AiResponseSubheadingStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/ai_response_subheading_color</item>
        <item name="android:lineSpacingExtra">3dp</item>
        <item name="android:letterSpacing">0.025</item>
        <item name="android:fontWeight">300</item>
        <item name="android:alpha">0.9</item>
    </style>

    <!-- Refined AI Response Body Text -->
    <style name="AiResponseBodyStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/ai_response_body_color</item>
        <item name="android:lineSpacingExtra">5dp</item>
        <item name="android:lineSpacingMultiplier">1.4</item>
        <item name="android:letterSpacing">0.015</item>
        <item name="android:fontWeight">200</item>
        <item name="android:alpha">0.92</item>
    </style>

    <!-- Elegant AI Response Caption -->
    <style name="AiResponseCaptionStyle">
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/ai_response_caption_color</item>
        <item name="android:lineSpacingExtra">2dp</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:fontWeight">300</item>
        <item name="android:alpha">0.85</item>
    </style>

    <!-- Sophisticated AI Response Code Text -->
    <style name="AiResponseCodeStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:textColor">@color/ai_response_code_color</item>
        <item name="android:lineSpacingExtra">3dp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:fontWeight">400</item>
        <item name="android:alpha">0.95</item>
    </style>

    <!-- Graceful AI Response Quote Style -->
    <style name="AiResponseQuoteStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/ai_response_quote_color</item>
        <item name="android:lineSpacingExtra">4dp</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textStyle">italic</item>
        <item name="android:fontWeight">300</item>
        <item name="android:alpha">0.88</item>
    </style>

    <!-- Premium AI Response List Style -->
    <style name="AiResponseListStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/ai_response_list_color</item>
        <item name="android:lineSpacingExtra">4dp</item>
        <item name="android:letterSpacing">0.015</item>
        <item name="android:fontWeight">200</item>
        <item name="android:alpha">0.9</item>
    </style>

    <!-- Beautiful AI Response Link Style -->
    <style name="AiResponseLinkStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/ai_response_link_color</item>
        <item name="android:lineSpacingExtra">3dp</item>
        <item name="android:letterSpacing">0.015</item>
        <item name="android:fontWeight">300</item>
        <item name="android:alpha">0.95</item>
    </style>

    <!-- Ultra-Sophisticated AI Response Background Card Style -->
    <style name="AiResponseCardStyle">
        <item name="android:background">@drawable/ai_response_beautiful_background</item>
        <item name="android:padding">20dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:elevation">2dp</item>
    </style>

    <!-- =============================================================== -->
    <!-- STUNNING VOICE RECORDING BOTTOM SHEET DIALOG THEME           -->
    <!-- =============================================================== -->
    <style name="BottomSheetDialogTheme" parent="Theme.Material3.DayNight.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/StunningBottomSheetStyle</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">?attr/colorSurface</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="StunningBottomSheetStyle" parent="Widget.Material3.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/StunningBottomSheetShapeAppearance</item>
        <item name="backgroundTint">@color/background_light</item>
        <item name="android:elevation">16dp</item>
    </style>

    <style name="StunningBottomSheetShapeAppearance" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">24dp</item>
        <item name="cornerSizeTopRight">24dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>
    
</resources>