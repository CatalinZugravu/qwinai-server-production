<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/search_background">

    <!-- Search Input Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <!-- Search Icon -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="12dp"
            android:src="@drawable/ic_search"
            android:contentDescription="Search"
            app:tint="?attr/colorOnSurfaceVariant" />

        <!-- Search Input -->
        <EditText
            android:id="@+id/searchInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:hint="Search conversations and messages..."
            android:textSize="16sp"
            android:textColor="?attr/colorOnSurface"
            android:textColorHint="?attr/colorOnSurfaceVariant"
            android:inputType="text"
            android:imeOptions="actionSearch"
            android:maxLines="1" />

        <!-- Clear Button -->
        <ImageView
            android:id="@+id/clearSearchButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_clear"
            android:contentDescription="Clear search"
            android:visibility="gone"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="4dp"
            app:tint="?attr/colorOnSurfaceVariant" />

        <!-- Filters Toggle -->
        <ImageView
            android:id="@+id/filtersToggle"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_tune"
            android:contentDescription="Search filters"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="4dp"
            app:tint="?attr/colorOnSurfaceVariant" />

    </LinearLayout>

    <!-- Suggestions RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/suggestionsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:maxHeight="200dp"
        android:background="?attr/colorSurface"
        android:elevation="4dp" />

    <!-- Search Filters -->
    <LinearLayout
        android:id="@+id/filtersContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:background="?attr/colorSurfaceVariant"
        android:padding="16dp">

        <!-- Content Type Filters -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Content Type"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="?attr/colorOnSurface"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <CheckBox
                android:id="@+id/includeConversationsCheckbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Conversations"
                android:checked="true"
                android:layout_marginEnd="16dp" />

            <CheckBox
                android:id="@+id/includeMessagesCheckbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Messages"
                android:checked="true" />

        </LinearLayout>

        <!-- Message Type Filters -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <CheckBox
                android:id="@+id/onlyUserMessagesCheckbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Only user messages"
                android:layout_marginEnd="16dp" />

            <CheckBox
                android:id="@+id/onlyAiMessagesCheckbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Only AI messages" />

        </LinearLayout>

        <!-- Date Range Filter -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date Range"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="?attr/colorOnSurface"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/dateRangeSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <!-- Model Filter -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AI Model"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="?attr/colorOnSurface"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/modelSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>