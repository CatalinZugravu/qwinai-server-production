<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:background="@android:color/transparent"
    android:paddingTop="16dp"
    android:paddingBottom="100dp"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp">

        <!-- Greeting Text with improved typography -->
        <TextView
            android:id="@+id/greetingTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Good afternoon, friend!"
            android:textColor="?attr/colorOnSurface"
            android:textSize="24sp"
            android:textStyle="bold"
            android:letterSpacing="-0.01"
            app:fontFamily="sans-serif-medium"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" />

        <!-- Top Cards Row -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/topCardsRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/greetingTextView"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="24dp">

            <!-- AI Tip of the Day Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/tipCardView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:strokeColor="?attr/colorOutline"
                app:strokeWidth="0.5dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/guidelineVertical"
                app:layout_constraintTop_toTopOf="parent"
                app:cardBackgroundColor="?attr/colorSurfaceVariant"
                android:layout_marginEnd="8dp"
                android:foreground="?attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_tips"
                            android:contentDescription="Tip icon"
                            app:tint="?attr/colorPrimary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="AI TIP"
                            android:textSize="12sp"
                            android:textColor="?attr/colorPrimary"
                            android:textAllCaps="true"
                            android:letterSpacing="0.05"
                            app:fontFamily="sans-serif-medium" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tipOfDayText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Try being specific with your prompts for better results"
                        android:textSize="14sp"
                        android:textColor="?attr/colorOnSurface"
                        app:fontFamily="sans-serif"
                        android:lineSpacingExtra="2dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>


            <!-- Beautiful Animation Element -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/animationCardView"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="8dp"
                app:strokeColor="?attr/colorPrimary"
                app:strokeWidth="2dp"
                app:layout_constraintStart_toEndOf="@+id/guidelineVertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/tipCardView"
                app:cardBackgroundColor="?attr/colorSurface"
                android:layout_marginStart="8dp"
                android:elevation="12dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="16dp">

                    <!-- Pulsing Brain Icon -->
                    <ImageView
                        android:id="@+id/brainIcon"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_brain_thinking"
                        app:tint="?attr/colorPrimary"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:contentDescription="AI Thinking" />

                    <!-- Floating Particles -->
                    <ImageView
                        android:id="@+id/particle1"
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:src="@drawable/circle_dark"
                        app:tint="?attr/colorPrimary"
                        android:alpha="0.6"
                        app:layout_constraintTop_toTopOf="@id/brainIcon"
                        app:layout_constraintStart_toEndOf="@id/brainIcon"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp" />

                    <ImageView
                        android:id="@+id/particle2"
                        android:layout_width="6dp"
                        android:layout_height="6dp"
                        android:src="@drawable/circle_dark"
                        app:tint="?attr/colorSecondary"
                        android:alpha="0.8"
                        app:layout_constraintTop_toBottomOf="@id/brainIcon"
                        app:layout_constraintEnd_toStartOf="@id/brainIcon"
                        android:layout_marginEnd="12dp"
                        android:layout_marginTop="-16dp" />

                    <ImageView
                        android:id="@+id/particle3"
                        android:layout_width="4dp"
                        android:layout_height="4dp"
                        android:src="@drawable/circle_dark"
                        app:tint="?attr/colorTertiary"
                        android:alpha="0.7"
                        app:layout_constraintBottom_toBottomOf="@id/brainIcon"
                        app:layout_constraintStart_toStartOf="@id/brainIcon"
                        android:layout_marginStart="-8dp"
                        android:layout_marginBottom="-8dp" />

                    <!-- Ultrathink Label -->
                    <TextView
                        android:id="@+id/ultrathinkLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ULTRATHINK"
                        android:textSize="10sp"
                        android:textColor="?attr/colorPrimary"
                        android:textAllCaps="true"
                        android:letterSpacing="0.1"
                        android:alpha="0.9"
                        app:fontFamily="@font/ultrathink"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Vertical guideline to split the two cards -->
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guidelineVertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.6" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Recent Models Section -->
        <TextView
            android:id="@+id/recentModelsLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Recent Models"
            android:textColor="?attr/colorOnSurface"
            android:textSize="18sp"
            android:textStyle="bold"
            android:letterSpacing="-0.01"
            app:fontFamily="sans-serif-medium"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/topCardsRow" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recentModelsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:clipToPadding="false"
            android:orientation="horizontal"
            android:paddingEnd="16dp"
            app:layout_constraintTop_toBottomOf="@id/recentModelsLabel" />

        <!-- Dynamic Cards Section (What's New & Upgrade) -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/dynamicCardsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/recentModelsRecyclerView"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp">

            <!-- What's New Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/whatsNewCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:strokeColor="?attr/colorOutline"
                app:strokeWidth="0.5dp"
                app:layout_constraintTop_toTopOf="parent"
                app:cardBackgroundColor="?attr/colorSurfaceVariant"
                android:foreground="?attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_new_feature"
                        app:tint="?attr/colorPrimary" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="What's New"
                            android:textColor="?attr/colorOnSurface"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            app:fontFamily="sans-serif-medium" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Check out the latest features and improvements"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:textSize="14sp"
                            app:fontFamily="sans-serif"
                            android:lineSpacingExtra="2dp" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Upgrade Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/upgradeCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:strokeColor="?attr/colorOutline"
                app:strokeWidth="0.5dp"
                app:layout_constraintTop_toBottomOf="@id/whatsNewCard"
                app:cardBackgroundColor="?attr/colorSurfaceVariant"
                android:layout_marginTop="12dp"
                android:foreground="?attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Upgrade to PRO"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:fontFamily="sans-serif-medium" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Unlock premium features like image generation, advanced models, and more"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:textSize="14sp"
                        app:fontFamily="sans-serif"
                        android:lineSpacingExtra="2dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnUpgrade"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginTop="16dp"
                        android:text="Upgrade Now"
                        android:textAllCaps="false"
                        app:backgroundTint="?attr/colorPrimary"
                        android:textColor="?attr/colorOnPrimary" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- AI Features Section -->
        <TextView
            android:id="@+id/featuresTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="AI Features"
            android:textColor="?attr/colorOnSurface"
            android:textSize="18sp"
            android:textStyle="bold"
            android:letterSpacing="-0.01"
            app:fontFamily="sans-serif-medium"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dynamicCardsContainer" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/featuresRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:clipToPadding="false"
            android:nestedScrollingEnabled="false"
            app:layout_constraintTop_toBottomOf="@id/featuresTitle" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>