<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="0dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/purple_hint_stroke"
    app:cardBackgroundColor="@color/purple_hint_card_bg"
    android:foreground="?attr/selectableItemBackground"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="false">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp">

        <!-- Icon container -->
        <FrameLayout
            android:id="@+id/iconContainer"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@drawable/circle_outline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:id="@+id/imgFeatureIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_search"
                app:tint="@color/icon_color"
                android:contentDescription="@string/feature_icon" />
        </FrameLayout>

        <!-- Texts -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@id/iconContainer"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/imgArrow">

            <TextView
                android:id="@+id/tvFeatureTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Feature Title"
                android:textSize="16sp"
                android:fontFamily="@font/rubik_medium"
                android:textColor="@color/text_primary" />

            <TextView
                android:id="@+id/tvFeatureDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="A short, meaningful description goes here"
                android:textSize="13sp"
                android:fontFamily="@font/rubik"
                android:textColor="@color/text_secondary"
                android:alpha="0.85" />
        </LinearLayout>

        <!-- Chevron -->
        <ImageView
            android:id="@+id/imgArrow"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:alpha="0.6"
            android:src="@drawable/ic_chevron_right"
            android:contentDescription="@string/arrow_icon"
            app:tint="@color/text_secondary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
