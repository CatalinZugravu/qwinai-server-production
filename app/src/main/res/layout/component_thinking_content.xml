<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/thinkingCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/thinking_border_color"
    app:cardBackgroundColor="@color/thinking_background_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Header with thinking indicator, timer, and toggle -->
        <LinearLayout
            android:id="@+id/thinkingHeaderContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground"
            android:padding="4dp">

            <!-- Loading indicator / Lightbulb icon -->
            <FrameLayout
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="8dp">

                <ProgressBar
                    android:id="@+id/thinkingLoadingIndicator"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center"
                    android:indeterminateTint="@color/thinking_accent_color"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/thinkingCompletedIcon"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_lightbulb"
                    android:visibility="gone"
                    app:tint="@color/thinking_accent_color" />
            </FrameLayout>

            <!-- Thinking status text -->
            <TextView
                android:id="@+id/thinkingStatusText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Thinking"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/thinking_text_primary"
 />

            <!-- Timer -->
            <TextView
                android:id="@+id/thinkingTimer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="7s"
                android:textSize="13sp"
                android:textColor="@color/thinking_text_secondary"
                android:fontFamily="monospace" />

            <!-- Toggle arrow -->
            <ImageButton
                android:id="@+id/thinkingToggleButton"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_keyboard_arrow_down"
                android:scaleType="centerInside"
                android:rotation="0"
                android:contentDescription="Toggle thinking content"
                app:tint="@color/thinking_text_secondary" />
        </LinearLayout>

        <!-- Scrollable thinking content area -->
        <LinearLayout
            android:id="@+id/thinkingContentArea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp">

            <!-- Preview container (for streaming with auto-scroll and fade) -->
            <FrameLayout
                android:id="@+id/thinkingPreviewContainer"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:visibility="visible">

                <!-- Scrollable preview content -->
                <ScrollView
                    android:id="@+id/thinkingPreviewScrollView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fadeScrollbars="true"
                    android:scrollbars="none">

                    <TextView
                        android:id="@+id/thinkingPreviewContent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:textColor="@color/thinking_content_text"
                        android:lineSpacingExtra="2dp"
                        android:alpha="0.9"
                        tools:text="I need to think about this step by step. First, let me consider..." />
                </ScrollView>

                <!-- Gradient fade overlay for top and bottom -->
                <View
                    android:id="@+id/topFadeOverlay"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_gravity="top"
                    android:background="@drawable/gradient_fade_top"
                    android:alpha="0.7" />

                <View
                    android:id="@+id/bottomFadeOverlay"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_gravity="bottom"
                    android:background="@drawable/gradient_fade_bottom"
                    android:alpha="0.7" />
            </FrameLayout>

            <!-- Full content container (shown when expanded) -->
            <ScrollView
                android:id="@+id/thinkingFullContentScrollView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxHeight="300dp"
                android:fadeScrollbars="true"
                android:visibility="gone">

                <TextView
                    android:id="@+id/thinkingFullContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textColor="@color/thinking_content_text"
                    android:lineSpacingExtra="2dp"
                    android:textIsSelectable="true"
                    tools:text="Full thinking content goes here..." />
            </ScrollView>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>