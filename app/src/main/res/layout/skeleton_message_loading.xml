<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginVertical="8dp"
    android:layout_marginHorizontal="16dp">

    <!-- Skeleton Avatar and Content Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="start|top">

        <!-- Skeleton Avatar -->
        <View
            android:id="@+id/skeletonAvatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/skeleton_shimmer_background"
            android:layout_marginTop="4dp" />

        <!-- Skeleton Content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Skeleton Text Lines -->
            <View
                android:id="@+id/skeletonLine1"
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/skeleton_shimmer_background" />

            <View
                android:id="@+id/skeletonLine2"
                android:layout_width="220dp"
                android:layout_height="16dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/skeleton_shimmer_background" />

            <View
                android:id="@+id/skeletonLine3"
                android:layout_width="180dp"
                android:layout_height="16dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/skeleton_shimmer_background" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>