<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainDialogContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/dialog_top_rounded_background"
    android:elevation="8dp">

    <!-- Drag handle -->
    <FrameLayout
        android:id="@+id/dragHandleContainer"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:clickable="true"
        android:focusable="true">

        <View
            android:id="@+id/dragHandle"
            android:layout_width="40dp"
            android:layout_height="4dp"
            android:layout_gravity="center"
            android:background="@drawable/drag_handle_background"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="8dp" />
    </FrameLayout>

    <!-- Font Size Title -->
    <TextView
        android:id="@+id/tvFontSizeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:text="Font Size"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="?attr/colorOnSurface"
        android:fontFamily="@font/ultrathink" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="16dp"
        android:background="@color/divider" />

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:scrollbars="none"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp">

            <!-- Font Size Control Container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="32dp">

                <!-- Small A Icon -->
                <TextView
                    android:id="@+id/tvSmallA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A"
                    android:textSize="16sp"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:layout_marginEnd="16dp"
                    android:fontFamily="@font/ultrathink" />

                <!-- Font Size Slider -->
                <com.google.android.material.slider.Slider
                    android:id="@+id/fontSizeSlider"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:valueFrom="12"
                    android:valueTo="24"
                    android:value="16"
                    android:stepSize="1"
                    app:thumbColor="?attr/colorPrimary"
                    app:trackColorActive="?attr/colorPrimary"
                    app:trackColorInactive="?attr/colorOutlineVariant" />

                <!-- Large A Icon -->
                <TextView
                    android:id="@+id/tvLargeA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A"
                    android:textSize="24sp"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:layout_marginStart="16dp"
                    android:fontFamily="@font/ultrathink" />

            </LinearLayout>

            <!-- Preview Text -->
            <TextView
                android:id="@+id/tvPreviewText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Preview: This is how your text will look"
                android:textSize="16sp"
                android:textColor="?attr/colorOnSurface"
                android:fontFamily="@font/ultrathink"
                android:gravity="center"
                android:padding="20dp"
                android:background="@drawable/rounded_background"
                android:backgroundTint="?attr/colorSurfaceVariant" />

        </LinearLayout>
    </ScrollView>

    <!-- Apply Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnApplyFontSize"
        style="@style/Widget.Material3.Button"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:text="Apply"
        android:fontFamily="@font/ultrathink"
        android:textStyle="bold" />

</LinearLayout>