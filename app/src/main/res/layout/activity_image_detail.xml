<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    tools:context=".ImageDetailActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:titleTextColor="?attr/colorOnPrimary" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Image Container -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="@color/black">

                <com.github.chrisbanes.photoview.PhotoView
                    android:id="@+id/photoView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter" />

            </FrameLayout>

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="24dp"
                android:paddingTop="16dp"
                android:gravity="center"
                android:background="@color/surface">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnDownload"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="DOWNLOAD"
                    android:textSize="12sp"
                    android:textAllCaps="true"
                    android:letterSpacing="0.1"
                    app:icon="@drawable/ic_download"
                    app:iconSize="20dp"
                    app:cornerRadius="8dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="@color/colorPrimary" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnShare"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="4dp"
                    android:text="SHARE"
                    android:textSize="12sp"
                    android:textAllCaps="true"
                    android:letterSpacing="0.1"
                    app:icon="@drawable/ic_share"
                    app:iconSize="20dp"
                    app:cornerRadius="8dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="@color/colorPrimary" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSetWallpaper"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="2dp"
                    android:text="WALLPAPER"
                    android:textSize="11sp"
                    android:textAllCaps="true"
                    android:letterSpacing="0.1"
                    app:icon="@drawable/ic_wallpaper"
                    app:iconSize="18dp"
                    app:cornerRadius="8dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="@color/colorPrimary" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnRename"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="2dp"
                    android:text="RENAME"
                    android:textSize="11sp"
                    android:textAllCaps="true"
                    android:letterSpacing="0.1"
                    app:icon="@drawable/ic_edit"
                    app:iconSize="18dp"
                    app:cornerRadius="8dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="@color/colorPrimary" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnDelete"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="DELETE"
                    android:textSize="11sp"
                    android:textAllCaps="true"
                    android:letterSpacing="0.1"
                    android:textColor="@color/error_color"
                    app:icon="@drawable/ic_delete"
                    app:iconSize="18dp"
                    app:iconTint="@color/error_color"
                    app:cornerRadius="8dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="@color/error_color" />

            </LinearLayout>

            <!-- Fullscreen Button -->
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btnFullscreen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="-32dp"
                android:src="@drawable/ic_fullscreen"
                android:contentDescription="View fullscreen"
                app:fabSize="normal"
                app:backgroundTint="@color/colorPrimary"
                app:tint="@color/white" />

            <!-- Image Information -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Image Details"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/colorOnSurface" />

                        <ImageView
                            android:id="@+id/iconDownloaded"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_download_done"
                            android:visibility="gone"
                            app:tint="?attr/colorPrimary" />

                    </LinearLayout>

                    <!-- File Name -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:text="File:"
                            android:textColor="?android:attr/textColorSecondary"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/textFileName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/colorOnSurface"
                            android:textSize="14sp"
                            tools:text="AI_image_20241220_143052.png" />

                    </LinearLayout>

                    <!-- AI Model -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:text="Model:"
                            android:textColor="?android:attr/textColorSecondary"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/textModel"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/colorOnSurface"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            tools:text="DALL-E 3" />

                    </LinearLayout>

                    <!-- Resolution -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:text="Size:"
                            android:textColor="?android:attr/textColorSecondary"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/textResolution"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/colorOnSurface"
                            android:textSize="14sp"
                            tools:text="1024 × 1024" />

                    </LinearLayout>

                    <!-- File Size -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:text="File Size:"
                            android:textColor="?android:attr/textColorSecondary"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/textFileSize"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/colorOnSurface"
                            android:textSize="14sp"
                            tools:text="2.1 MB" />

                    </LinearLayout>

                    <!-- Timestamp -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:text="Created:"
                            android:textColor="?android:attr/textColorSecondary"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/textTimestamp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/colorOnSurface"
                            android:textSize="14sp"
                            tools:text="Dec 20, 2024 at 14:30" />

                    </LinearLayout>

                    <!-- Prompt -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="4dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Prompt:"
                            android:textColor="?android:attr/textColorSecondary"
                            android:textSize="14sp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnCopyPrompt"
                            style="@style/Widget.MaterialComponents.Button.TextButton"
                            android:layout_width="wrap_content"
                            android:layout_height="32dp"
                            android:minWidth="0dp"
                            android:paddingHorizontal="12dp"
                            android:text="COPY"
                            android:textSize="11sp"
                            android:textAllCaps="true"
                            android:letterSpacing="0.1"
                            app:icon="@drawable/ic_copy"
                            app:iconSize="16dp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/textPrompt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorOnSurface"
                        android:textSize="14sp"
                        android:background="@color/surface_variant"
                        android:padding="12dp"
                        android:textIsSelectable="true"
                        tools:text="A beautiful sunset over mountains with vibrant colors" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Generation Settings -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardGenerationSettings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Generation Settings"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorOnSurface"
                        android:layout_marginBottom="12dp" />

                    <!-- Style -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:text="Style:"
                            android:textColor="?android:attr/textColorSecondary"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/textStyle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/colorOnSurface"
                            android:textSize="14sp"
                            tools:text="Photorealistic" />

                    </LinearLayout>

                    <!-- Quality -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:text="Quality:"
                            android:textColor="?android:attr/textColorSecondary"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/textQuality"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/colorOnSurface"
                            android:textSize="14sp"
                            tools:text="HD" />

                    </LinearLayout>

                    <!-- Aspect Ratio -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:text="Ratio:"
                            android:textColor="?android:attr/textColorSecondary"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/textAspectRatio"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/colorOnSurface"
                            android:textSize="14sp"
                            tools:text="1:1" />

                    </LinearLayout>

                    <!-- Seed -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:text="Seed:"
                            android:textColor="?android:attr/textColorSecondary"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/textSeed"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/colorOnSurface"
                            android:textSize="14sp"
                            android:fontFamily="monospace"
                            tools:text="1234567890" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>