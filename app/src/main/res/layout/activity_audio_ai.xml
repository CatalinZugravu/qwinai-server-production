<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/warm_amber_gradient_bg"
    tools:context=".AudioAiActivity">

    <!-- Header Layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:background="@drawable/header_gradient_background"
        android:elevation="4dp"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Back"
            android:padding="8dp"
            android:src="@drawable/back_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:tint="@color/text_primary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/rubik_medium"
            android:text="AI Voice Chat"
            android:textColor="@color/text_primary"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <ImageButton
            android:id="@+id/btnSettings"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Settings"
            android:padding="8dp"
            android:src="@drawable/ic_tune"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:tint="@color/text_primary" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Header line -->
    <View
        android:id="@+id/audioHeaderLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider"
        android:alpha="0.3"
        android:layout_marginTop="@dimen/header_height" />

    <!-- Ambient Glow Background -->
    <View
        android:id="@+id/ambientGlow"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:background="@drawable/ambient_glow_amber"
        app:layout_constraintTop_toBottomOf="@id/audioHeaderLine"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:alpha="0.6" />

    <!-- Liquid Morphing Sphere (replaced CardView) -->
    <com.cyberflux.qwinai.views.LiquidMorphingView
        android:id="@+id/liquidMorphingView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@id/audioHeaderLine"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Status Text -->
    <TextView
        android:id="@+id/statusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tap to speak"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="normal"
        android:letterSpacing="0.02"
        android:alpha="0.9"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toBottomOf="@id/liquidMorphingView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/subtitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Neural Voice Assistant"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:alpha="0.6"
        android:letterSpacing="0.01"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/statusText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Control Buttons Container -->
    <LinearLayout
        android:id="@+id/controlsContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Mute Button -->
        <androidx.cardview.widget.CardView
            android:id="@+id/muteButton"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_marginEnd="24dp"
            app:cardCornerRadius="26dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@android:color/transparent"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackgroundBorderless">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/glassmorphism_button">

                <!-- Minimal Lines Microphone Icon -->
                <FrameLayout
                    android:id="@+id/muteIconContainer"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center">

                    <!-- Microphone Head (Circle) -->
                    <View
                        android:id="@+id/micHead"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:background="@drawable/mic_head_outline" />

                    <!-- Microphone Stand -->
                    <View
                        android:id="@+id/micStand"
                        android:layout_width="2dp"
                        android:layout_height="6dp"
                        android:layout_gravity="center_horizontal|bottom"
                        android:layout_marginBottom="-8dp"
                        android:background="@color/white" />

                    <!-- Microphone Base -->
                    <View
                        android:id="@+id/micBase"
                        android:layout_width="22dp"
                        android:layout_height="2dp"
                        android:layout_gravity="center_horizontal|bottom"
                        android:layout_marginBottom="-12dp"
                        android:background="@drawable/mic_base_line" />

                    <!-- Mute Strike-through (hidden by default) -->
                    <View
                        android:id="@+id/muteStrike"
                        android:layout_width="24dp"
                        android:layout_height="2dp"
                        android:layout_gravity="center"
                        android:background="@color/error_color"
                        android:rotation="45"
                        android:visibility="gone" />

                </FrameLayout>
            </FrameLayout>
        </androidx.cardview.widget.CardView>

        <!-- Main Record Button -->
        <androidx.cardview.widget.CardView
            android:id="@+id/recordButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@android:color/transparent"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackgroundBorderless">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/glassmorphism_button_primary">

                <!-- Record Indicator -->
                <View
                    android:id="@+id/recordIndicator"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:background="@drawable/record_circle"
                    android:alpha="0.8" />

                <!-- Recording Ring Animation -->
                <View
                    android:id="@+id/recordingRing"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/recording_pulse_ring"
                    android:visibility="gone" />

            </FrameLayout>
        </androidx.cardview.widget.CardView>

        <!-- Exit Button -->
        <androidx.cardview.widget.CardView
            android:id="@+id/exitButton"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_marginStart="24dp"
            app:cardCornerRadius="26dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@android:color/transparent"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackgroundBorderless">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/glassmorphism_button">

                <!-- Clean Exit Icon (X) -->
                <FrameLayout
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center">

                    <!-- First line of X -->
                    <View
                        android:layout_width="18dp"
                        android:layout_height="2dp"
                        android:layout_gravity="center"
                        android:background="@drawable/exit_line"
                        android:rotation="45" />

                    <!-- Second line of X -->
                    <View
                        android:layout_width="18dp"
                        android:layout_height="2dp"
                        android:layout_gravity="center"
                        android:background="@drawable/exit_line"
                        android:rotation="-45" />

                </FrameLayout>
            </FrameLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <!-- Button Labels -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/controlsContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/muteLabel"
            android:layout_width="52dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:text="Mute"
            android:textColor="@color/white"
            android:textSize="11sp"
            android:gravity="center"
            android:alpha="0.6" />

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="Voice"
            android:textColor="@color/white"
            android:textSize="11sp"
            android:gravity="center"
            android:alpha="0.6" />

        <TextView
            android:layout_width="52dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:text="Exit"
            android:textColor="@color/white"
            android:textSize="11sp"
            android:gravity="center"
            android:alpha="0.6" />

    </LinearLayout>

    <!-- Volume Visualizer (appears during recording/speaking) -->
    <LinearLayout
        android:id="@+id/volumeVisualizer"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center|bottom"
        android:layout_marginBottom="200dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <!-- Volume bars will be added programmatically -->
    </LinearLayout>

    <!-- Connection Status Indicator -->
    <LinearLayout
        android:id="@+id/connectionStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <View
            android:id="@+id/statusDot"
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:background="@drawable/status_dot"
            android:layout_marginEnd="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Connected"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:alpha="0.7" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>