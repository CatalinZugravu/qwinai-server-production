<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainDialogContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/dialog_top_rounded_background"
    android:elevation="8dp">

    <!-- Drag handle -->
    <FrameLayout
        android:id="@+id/dragHandleContainer"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:clickable="true"
        android:focusable="true">

        <View
            android:id="@+id/dragHandle"
            android:layout_width="40dp"
            android:layout_height="4dp"
            android:layout_gravity="center"
            android:background="@drawable/drag_handle_background"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="8dp" />
    </FrameLayout>

    <!-- Choose Model Title -->
    <TextView
        android:id="@+id/tvChooseModelTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:text="Choose model"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="?attr/colorOnSurface"
        android:fontFamily="@font/ultrathink" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="16dp"
        android:background="@color/divider" />

    <!-- Models RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/modelsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingHorizontal="16dp"
        android:paddingVertical="16dp"
        android:clipToPadding="false" />

    <!-- Done Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnDone"
        style="@style/Widget.Material3.Button"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:text="Done"
        android:fontFamily="@font/ultrathink"
        android:textStyle="bold" />

</LinearLayout>
