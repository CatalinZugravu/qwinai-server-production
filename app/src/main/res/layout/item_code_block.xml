<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    android:background="@drawable/bg_code_block"
    android:orientation="vertical"
    android:elevation="2dp"
    android:padding="0dp">

    <!-- Header: language label and copy button -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:paddingVertical="10dp"
        android:background="@drawable/bg_code_header">

        <TextView
            android:id="@+id/tvLanguage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="javascript"
            android:textColor="#999999"
            android:textSize="12sp"
            android:fontFamily="sans-serif"
            android:textStyle="normal" />

        <LinearLayout
            android:id="@+id/btnCopyCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:gravity="center"
            android:minWidth="60dp"
            android:minHeight="32dp"
            android:paddingHorizontal="8dp"
            android:paddingVertical="8dp">

            <ImageView
                android:id="@+id/copyIcon"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginEnd="6dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_copy_24"
                app:tint="#999999" />

            <TextView
                android:id="@+id/copyText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Copy"
                android:textColor="#999999"
                android:textSize="12sp"
                android:fontFamily="sans-serif"
                android:gravity="center" />
        </LinearLayout>
    </RelativeLayout>

    <!-- Divider line -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginHorizontal="12dp"
        android:background="#737373" />

    <!-- Scrollable code block -->
    <HorizontalScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="horizontal"
        android:fadeScrollbars="false"
        android:scrollbarSize="6dp"
        android:scrollbarStyle="outsideOverlay"
        android:background="@drawable/bg_code_content"
        android:overScrollMode="ifContentScrolls"
        android:scrollbarThumbHorizontal="@android:color/darker_gray"
        android:scrollbarTrackHorizontal="@android:color/transparent">

        <TextView
            android:id="@+id/tvCodeContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:text="Loading code..."
            android:textColor="#D4D4D4"
            android:textSize="13sp"
            android:textStyle="normal"
            android:padding="16dp"
            android:textIsSelectable="true"
            android:lineSpacingExtra="2dp"
            android:breakStrategy="simple"
            android:hyphenationFrequency="none"
            android:letterSpacing="0.02"
            android:scrollHorizontally="true"
            android:ellipsize="none"
            android:maxLines="2147483647"
            android:minWidth="0dp"
            android:singleLine="false"
            android:background="@android:color/transparent" />
    </HorizontalScrollView>
</LinearLayout>
