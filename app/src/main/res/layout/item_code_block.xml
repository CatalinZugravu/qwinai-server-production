<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="?attr/colorSurface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="?attr/colorSurfaceVariant">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp"
            android:paddingVertical="10dp"
            android:background="?attr/colorPrimaryContainer"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvLanguage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="javascript"
                android:textColor="?attr/colorOnPrimaryContainer"
                android:textSize="12sp"
                android:fontFamily="sans-serif-medium" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <!-- Action Buttons Container -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <!-- Open in Full Screen Button -->
                <LinearLayout
                    android:id="@+id/btnOpenCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:gravity="center"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp"
                    android:layout_marginEnd="4dp">

                    <ImageView
                        android:id="@+id/openIcon"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@drawable/ic_expand_corner"
                        android:tint="?attr/colorOnSurfaceVariant"
                        android:contentDescription="Open in full screen" />
                </LinearLayout>

                <!-- Copy Button -->
                <LinearLayout
                    android:id="@+id/btnCopyCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:gravity="center"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp">

                    <ImageView
                        android:id="@+id/copyIcon"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginEnd="6dp"
                        android:src="@drawable/ic_copy_24"
                        android:tint="?attr/colorOnSurfaceVariant" />

                    <TextView
                        android:id="@+id/copyText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Copy"
                        android:textColor="?attr/colorOnPrimaryContainer"
                        android:textSize="12sp"
                        android:fontFamily="sans-serif" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="12dp"
            android:background="@color/divider" />

        <!-- Code content with proper horizontal scrolling -->
        <HorizontalScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="horizontal"
            android:scrollbarStyle="outsideOverlay"
            android:fadeScrollbars="false"
            android:scrollbarAlwaysDrawHorizontalTrack="true"
            android:overScrollMode="ifContentScrolls"
            android:background="?attr/colorSurfaceVariant"
            android:paddingVertical="8dp">

            <TextView
                android:id="@+id/tvCodeContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="12dp"
                android:fontFamily="monospace"
                android:text="Loading code..."
                android:textColor="?attr/colorOnSurface"
                android:textSize="13sp"
                android:lineSpacingExtra="4dp"
                android:textIsSelectable="true"
                android:scrollHorizontally="true"
                android:ellipsize="none"
                android:singleLine="false"
                android:maxLines="100"
                android:breakStrategy="simple"
                android:hyphenationFrequency="none"
                android:minWidth="0dp"
                android:background="@android:color/transparent" />
        </HorizontalScrollView>
    </LinearLayout>
</androidx.cardview.widget.CardView>