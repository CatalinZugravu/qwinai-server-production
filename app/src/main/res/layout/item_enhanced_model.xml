<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/modelCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:cardElevation="1dp"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="#F5F5F5">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp">

        <!-- Model Icon - Made smaller and with less padding -->
        <ImageView
            android:id="@+id/ivModelIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:padding="1dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- Model Name - Improved text visibility -->
        <TextView
            android:id="@+id/tvModelName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            android:textColor="#212121"
            android:textSize="14sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:lineSpacingExtra="1dp"
            app:layout_constraintStart_toEndOf="@id/ivModelIcon"
            app:layout_constraintEnd_toStartOf="@id/tvProBadge"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- PRO Badge - Made smaller and positioned better -->
        <TextView
            android:id="@+id/tvProBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/premium_badge_gradient"
            android:paddingStart="3dp"
            android:paddingEnd="3dp"
            android:paddingTop="1dp"
            android:paddingBottom="1dp"
            android:text="PRO"
            android:textColor="@android:color/white"
            android:textSize="8sp"
            android:layout_marginEnd="2dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Selection indicator as circle -->
        <View
            android:id="@+id/selectionIndicator"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/selection_circle"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- Hidden checkmark for compatibility -->
        <ImageView
            android:id="@+id/ivCheckmark"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- Disabled Overlay -->
        <ImageView
            android:id="@+id/ivDisabledOverlay"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_disabled"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:tint="#9E9E9E" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>