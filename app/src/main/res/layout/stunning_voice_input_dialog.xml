<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/stunning_dialog_background"
    android:paddingHorizontal="24dp"
    android:paddingTop="28dp"
    android:paddingBottom="32dp">

    <!-- Beautiful gradient background -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/stunning_dialog_gradient"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Status Text -->
    <TextView
        android:id="@+id/stunningStatusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸŽ™ï¸ Listening..."
        android:textColor="@color/text_primary"
        android:textSize="24sp"
        android:textStyle="bold"
        android:fontFamily="@font/poppins_medium"
        android:letterSpacing="0.02"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Stunning Voice Animation Container -->
    <androidx.cardview.widget.CardView
        android:id="@+id/animationContainer"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="24dp"
        app:cardCornerRadius="100dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@color/colorPrimary"
        app:layout_constraintTop_toBottomOf="@id/stunningStatusText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Gradient background for animation container -->
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/stunning_animation_container_gradient" />

        <!-- Voice Animation -->
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/stunningVoiceAnimation"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_gravity="center"
            app:lottie_autoPlay="true"
            app:lottie_fileName="voice_animation.json"
            app:lottie_loop="true" />

        <!-- Central microphone overlay -->
        <FrameLayout
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/centralMicOverlay"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_mic"
                app:tint="@color/white"
                android:alpha="0.9"
                android:elevation="2dp" />

            <!-- Breathing glow effect -->
            <View
                android:id="@+id/breathingGlow"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/stunning_breathing_glow" />
        </FrameLayout>

        <!-- Elegant wave bars for audio visualization -->
        <LinearLayout
            android:id="@+id/stunningWaveBars"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal"
            android:gravity="center">
            <!-- Wave bars will be added dynamically -->
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Subtitle Text -->
    <TextView
        android:id="@+id/stunningSubtitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Speak naturally, I'm listening attentively"
        android:textColor="@color/text_secondary" 
        android:textSize="16sp"
        android:fontFamily="@font/poppins"
        android:gravity="center"
        android:alpha="0.9"
        app:layout_constraintTop_toBottomOf="@id/animationContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Real-time transcript card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/stunningTranscriptCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:visibility="gone"
        app:cardCornerRadius="16dp"
        app:cardBackgroundColor="@color/card_background"
        app:cardElevation="4dp"
        app:strokeWidth="1dp"
        app:strokeColor="@color/colorAccent"
        app:layout_constraintTop_toBottomOf="@id/stunningSubtitleText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_auto_awesome"
                app:tint="@color/colorPrimary"
                android:layout_marginEnd="10dp" />

            <TextView
                android:id="@+id/stunningRealtimeTranscript"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/text_primary"
                android:textSize="15sp"
                android:fontFamily="@font/poppins"
                android:maxLines="3"
                android:ellipsize="end" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Timer section -->
    <LinearLayout
        android:id="@+id/timerSection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="24dp"
        android:background="@drawable/stunning_timer_background"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        app:layout_constraintTop_toBottomOf="@id/stunningTranscriptCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <View
            android:id="@+id/stunningRecordingDot"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/stunning_recording_dot" />

        <TextView
            android:id="@+id/stunningRecordingTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textColor="@color/text_primary"
            android:textSize="14sp"
            android:textStyle="bold"
            android:fontFamily="@font/source_sans_pro_semibold" />
    </LinearLayout>

    <!-- Control buttons -->
    <LinearLayout
        android:id="@+id/controlButtons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="28dp"
        app:layout_constraintTop_toBottomOf="@id/timerSection"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Cancel Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/stunningCancelButton"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="Cancel"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:fontFamily="@font/poppins_medium"
            app:backgroundTint="@color/card_background"
            app:strokeColor="@color/text_secondary"
            app:strokeWidth="1dp"
            app:cornerRadius="28dp"
            app:elevation="2dp"
            app:icon="@drawable/ic_close"
            app:iconGravity="textStart"
            app:iconSize="18dp"
            app:iconTint="@color/text_secondary"
            android:textAllCaps="false"
            style="@style/Widget.Material3.Button.OutlinedButton" />

        <!-- Send Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/stunningSendButton"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="Send"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:fontFamily="@font/poppins_medium"
            app:backgroundTint="@color/colorPrimary"
            app:cornerRadius="28dp"
            app:elevation="4dp"
            app:icon="@drawable/send_icon"
            app:iconGravity="textStart"
            app:iconSize="18dp"
            app:iconTint="@color/white"
            android:textAllCaps="false"
            style="@style/Widget.Material3.Button.UnelevatedButton" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>