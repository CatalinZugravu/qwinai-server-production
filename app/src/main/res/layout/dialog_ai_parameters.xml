<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="@color/surface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AI Response Parameters"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurface"
            android:gravity="center"
            android:layout_marginBottom="8dp"/>

        <!-- Model Info -->
        <TextView
            android:id="@+id/tvCurrentModel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Current Model: GPT-4"
            android:textSize="14sp"
            android:textColor="?attr/colorPrimary"
            android:gravity="center"
            android:layout_marginBottom="16dp"/>

        <!-- Preset Selection -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="2dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="@color/surface_variant">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quick Presets"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="?attr/colorOnSurface"
                    android:layout_marginBottom="8dp"/>

                <!-- Preset Buttons using regular buttons for compatibility -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnBalanced"
                        style="@style/Widget.Material3.Button.TextButton"
                        android:layout_width="0dp"
                        android:layout_height="36dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="4dp"
                        android:text="Balanced"
                        android:textSize="12sp"
                        android:background="@drawable/circle_button_active"
                        android:textColor="@color/white"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnCreative"
                        style="@style/Widget.Material3.Button.TextButton"
                        android:layout_width="0dp"
                        android:layout_height="36dp"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="4dp"
                        android:text="Creative"
                        android:textSize="12sp"
                        android:background="@drawable/circle_button_inactive"
                        android:textColor="@color/text_secondary"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnPrecise"
                        style="@style/Widget.Material3.Button.TextButton"
                        android:layout_width="0dp"
                        android:layout_height="36dp"
                        android:layout_weight="1"
                        android:layout_marginStart="4dp"
                        android:text="Precise"
                        android:textSize="12sp"
                        android:background="@drawable/circle_button_inactive"
                        android:textColor="@color/text_secondary"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnDeterministic"
                        style="@style/Widget.Material3.Button.TextButton"
                        android:layout_width="0dp"
                        android:layout_height="36dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="4dp"
                        android:text="Deterministic"
                        android:textSize="12sp"
                        android:background="@drawable/circle_button_inactive"
                        android:textColor="@color/text_secondary"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnExperimental"
                        style="@style/Widget.Material3.Button.TextButton"
                        android:layout_width="0dp"
                        android:layout_height="36dp"
                        android:layout_weight="1"
                        android:layout_marginStart="4dp"
                        android:text="Experimental"
                        android:textSize="12sp"
                        android:background="@drawable/circle_button_inactive"
                        android:textColor="@color/text_secondary"/>

                    <!-- Spacer to balance layout -->
                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"/>

                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Advanced Parameters Toggle -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Advanced Parameters"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface"/>

            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/switchAdvanced"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <!-- Core Parameters (Always Visible) -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardElevation="1dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <!-- Temperature -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Creativity"
                        android:textSize="14sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/tvTemperatureValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.7"
                        android:textSize="14sp"
                        android:minWidth="40dp"
                        android:gravity="end"/>

                    <ImageButton
                        android:id="@+id/btnTemperatureInfo"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/ic_info"
                        android:contentDescription="Temperature info"
                        android:layout_marginStart="4dp"/>

                </LinearLayout>

                <com.google.android.material.slider.Slider
                    android:id="@+id/sliderTemperature"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:valueFrom="0.0"
                    android:valueTo="2.0"
                    android:stepSize="0.1"
                    android:value="0.7"
                    android:layout_marginBottom="12dp"/>

                <!-- Top-P -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Focus"
                        android:textSize="14sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/tvTopPValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.9"
                        android:textSize="14sp"
                        android:minWidth="40dp"
                        android:gravity="end"/>

                    <ImageButton
                        android:id="@+id/btnTopPInfo"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/ic_info"
                        android:contentDescription="Top-P info"
                        android:layout_marginStart="4dp"/>

                </LinearLayout>

                <com.google.android.material.slider.Slider
                    android:id="@+id/sliderTopP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:valueFrom="0.0"
                    android:valueTo="1.0"
                    android:stepSize="0.05"
                    android:value="0.9"
                    android:layout_marginBottom="12dp"/>

                <!-- Response Length -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Response Length"
                        android:textSize="14sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/tvMaxTokensValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4000"
                        android:textSize="14sp"
                        android:minWidth="50dp"
                        android:gravity="end"/>

                </LinearLayout>

                <com.google.android.material.slider.Slider
                    android:id="@+id/sliderMaxTokens"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:valueFrom="50"
                    android:valueTo="8000"
                    android:stepSize="50"
                    android:value="4000"/>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Advanced Parameters (Collapsible) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardAdvancedParams"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:visibility="gone"
            app:cardElevation="1dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <!-- Top-K -->
                <LinearLayout
                    android:id="@+id/layoutTopK"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Vocabulary"
                            android:textSize="14sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/tvTopKValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="50"
                            android:textSize="14sp"
                            android:minWidth="40dp"
                            android:gravity="end"/>

                        <ImageButton
                            android:id="@+id/btnTopKInfo"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:src="@drawable/ic_info"
                            android:contentDescription="Top-K info"
                            android:layout_marginStart="4dp"/>

                    </LinearLayout>

                    <com.google.android.material.slider.Slider
                        android:id="@+id/sliderTopK"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:valueFrom="1"
                        android:valueTo="100"
                        android:stepSize="1"
                        android:value="50"/>

                </LinearLayout>

                <!-- Repetition Penalty -->
                <LinearLayout
                    android:id="@+id/layoutRepetitionPenalty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Avoid Repetition"
                            android:textSize="14sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/tvRepetitionPenaltyValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1.1"
                            android:textSize="14sp"
                            android:minWidth="40dp"
                            android:gravity="end"/>

                        <ImageButton
                            android:id="@+id/btnRepetitionPenaltyInfo"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:src="@drawable/ic_info"
                            android:contentDescription="Repetition penalty info"
                            android:layout_marginStart="4dp"/>

                    </LinearLayout>

                    <com.google.android.material.slider.Slider
                        android:id="@+id/sliderRepetitionPenalty"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:valueFrom="0.1"
                        android:valueTo="2.0"
                        android:stepSize="0.1"
                        android:value="1.1"/>

                </LinearLayout>

                <!-- Frequency Penalty (OpenAI) -->
                <LinearLayout
                    android:id="@+id/layoutFrequencyPenalty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="12dp"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Word Frequency"
                            android:textSize="14sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/tvFrequencyPenaltyValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.0"
                            android:textSize="14sp"
                            android:minWidth="40dp"
                            android:gravity="end"/>

                        <ImageButton
                            android:id="@+id/btnFrequencyPenaltyInfo"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:src="@drawable/ic_info"
                            android:contentDescription="Frequency penalty info"
                            android:layout_marginStart="4dp"/>

                    </LinearLayout>

                    <com.google.android.material.slider.Slider
                        android:id="@+id/sliderFrequencyPenalty"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:valueFrom="-2.0"
                        android:valueTo="2.0"
                        android:stepSize="0.1"
                        android:value="0.0"/>

                </LinearLayout>

                <!-- Presence Penalty (OpenAI) -->
                <LinearLayout
                    android:id="@+id/layoutPresencePenalty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="12dp"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Topic Novelty"
                            android:textSize="14sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/tvPresencePenaltyValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.0"
                            android:textSize="14sp"
                            android:minWidth="40dp"
                            android:gravity="end"/>

                        <ImageButton
                            android:id="@+id/btnPresencePenaltyInfo"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:src="@drawable/ic_info"
                            android:contentDescription="Presence penalty info"
                            android:layout_marginStart="4dp"/>

                    </LinearLayout>

                    <com.google.android.material.slider.Slider
                        android:id="@+id/sliderPresencePenalty"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:valueFrom="-2.0"
                        android:valueTo="2.0"
                        android:stepSize="0.1"
                        android:value="0.0"/>

                </LinearLayout>

                <!-- Seed for Reproducibility -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Reproducible Responses"
                        android:textSize="14sp"
                        android:textStyle="bold"/>

                    <com.google.android.material.materialswitch.MaterialSwitch
                        android:id="@+id/switchSeed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/layoutSeedInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:visibility="gone"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etSeed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Random seed (optional)"
                        android:inputType="number"/>

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="16dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnResetToDefaults"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reset"
                android:layout_marginEnd="8dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCancel"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:layout_marginEnd="8dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnApply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apply"/>

        </LinearLayout>

    </LinearLayout>
</ScrollView>