<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    tools:context=".StartActivity">


    <!-- Header Section with App Title and Buttons -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:background="@drawable/header_gradient_background"
        android:elevation="0dp"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/rubik_medium"
            android:text="QwinAI"
            android:textColor="@color/text_primary"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- Settings Button -->
        <ImageButton
            android:id="@+id/btnSettings"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginEnd="12dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Settings"
            android:padding="6dp"
            android:src="@drawable/settings_button"
            app:layout_constraintEnd_toStartOf="@id/btnPro"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- Notification dot -->
        <View
            android:id="@+id/notificationDot"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/notification_dot"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="@id/btnSettings"
            app:layout_constraintEnd_toEndOf="@id/btnSettings" />

        <!-- PRO Button -->
        <TextView
            android:id="@+id/btnPro"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:background="@drawable/pro_badge_background"
            android:elevation="0dp"
            android:fontFamily="@font/rubik_medium"
            android:gravity="center"
            android:paddingHorizontal="16dp"
            android:text="PRO"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- Pro Status Indicator -->
        <View
            android:id="@+id/proStatusIndicator"
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:background="@drawable/pro_status_indicator"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/btnPro"
            app:layout_constraintEnd_toEndOf="@id/btnPro"
            app:layout_constraintStart_toEndOf="@id/btnPro" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Header line -->
    <View
        android:id="@+id/startHeaderLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider"
        android:alpha="0.3"
        android:layout_marginTop="@dimen/header_height" />

    <!-- ViewPager2 for Home and History fragments -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/header_height"
        android:layout_marginBottom="56dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    <!-- Enhanced Bottom Input Area with Voice Button -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/inputCardLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginHorizontal="12dp"
        android:layout_marginBottom="68dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/card_background"
        app:strokeWidth="1.5dp"
        app:strokeColor="@color/colorAccent"
        android:foreground="?attr/selectableItemBackground"
        app:cardPreventCornerOverlap="true">

        <!-- Input Card Gradient Background -->
        <View
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:background="@drawable/input_card_gradient" />

        <LinearLayout
            android:id="@+id/inputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <!-- Voice Input Button -->
            <ImageButton
                android:id="@+id/btnVoiceInput"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="4dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Voice input"
                android:padding="8dp"
                app:srcCompat="@drawable/ic_mic"
                app:tint="@color/colorPrimary" />

            <!-- Text Input Field -->
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etInputText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="Ask me anything..."
                android:inputType="textMultiLine"
                android:maxLines="3"
                android:minHeight="48dp"
                android:paddingHorizontal="12dp"
                android:paddingVertical="8dp"
                android:textSize="16sp" />

            <!-- Submit Button -->
            <ImageButton
                android:id="@+id/btnSubmitText"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/circular_button_background"
                android:contentDescription="Send message"
                android:padding="12dp"
                app:srcCompat="@drawable/send_icon"
                app:tint="@android:color/white" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Enhanced Tab Layout moved to bottom -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_gravity="bottom"
        android:background="@drawable/bottom_tab_enhanced_background"
        android:elevation="0dp"
        app:tabIconTint="@color/tab_icon_color"
        app:tabIndicator="@drawable/tab_indicator_enhanced"
        app:tabIndicatorColor="@color/colorPrimary"
        app:tabIndicatorHeight="3dp"
        app:tabRippleColor="@color/tab_ripple_color"
        app:tabSelectedTextColor="@color/colorPrimary"
        app:tabTextColor="@color/text_secondary" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>