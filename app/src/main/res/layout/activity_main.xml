<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".MainActivity">

    <!-- Top Bar with horizontal alignment -->
    <!-- Top Bar with horizontal alignment -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topBarLayout"
        android:layout_width="0dp"
        android:layout_height="@dimen/header_height"
        android:paddingTop="20dp"
        android:paddingBottom="12dp"
        android:background="@color/surface"
        android:elevation="1dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/btnConversationsList"
            style="@style/Widget.MaterialComponents.Button.Icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:contentDescription="Conversation history"
            app:iconTint="?attr/colorOnSurface"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/history_menu" />

        <TextView
            android:id="@+id/tvChatTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:text="New Chat"
            android:textColor="?attr/colorOnSurface"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/creditsButton"
            app:layout_constraintStart_toEndOf="@id/btnConversationsList"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/creditsButton"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/pro_badge_background"
            android:gravity="center"
            android:paddingHorizontal="16dp"
            android:orientation="horizontal"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnNewConversation"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginEnd="4dp"
                android:src="@drawable/ic_star"
                app:tint="@color/white" />

            <TextView
                android:id="@+id/tvCreditsCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/btnNewConversation"
            style="@style/Widget.MaterialComponents.Button.Icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="8dp"
            android:contentDescription="New conversation"
            app:iconTint="?attr/colorOnSurface"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/new_chat_icon" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Header line -->
    <View
        android:id="@+id/mainHeaderLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider"
        android:alpha="0.3"
        app:layout_constraintTop_toBottomOf="@id/topBarLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Model Selector Spinner -->
    <Spinner
        android:id="@+id/spinnerModels"
        android:layout_width="200dp"
        android:layout_height="47dp"
        android:minHeight="32dp"
        android:spinnerMode="dropdown"
        android:overlapAnchor="false"
        android:background="@drawable/spinner_selected_background"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mainHeaderLine" />

    <!-- Private Chat Ghost Icon -->
    <ImageButton
        android:id="@+id/btnPrivateChat"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginStart="12dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:srcCompat="@drawable/ic_ghost"
        app:tint="@color/colorPrimary"
        app:layout_constraintStart_toEndOf="@id/spinnerModels"
        app:layout_constraintTop_toTopOf="@id/spinnerModels"
        app:layout_constraintBottom_toBottomOf="@id/spinnerModels"
        android:contentDescription="Private Chat Mode"/>

    <!-- Private Mode Indicator Banner -->
    <androidx.cardview.widget.CardView
        android:id="@+id/privateModeIndicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginHorizontal="20dp"
        app:cardCornerRadius="12dp"
        app:cardBackgroundColor="@color/private_mode_background"
        app:cardElevation="2dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/spinnerModels"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="12dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="8dp"
                app:srcCompat="@drawable/ic_ghost"
                app:tint="@color/colorPrimary"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Private Mode: Conversations won't be saved"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Chat Messages RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/chatRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@id/selectedFilesScrollView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/privateModeIndicator" />

    <!-- Scroll to Top Button (TOP of chat area) -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabScrollToTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        android:contentDescription="Scroll to top"
        android:visibility="gone"
        app:backgroundTint="@color/accent_blue"
        app:fabSize="mini"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/chatRecyclerView"
        app:srcCompat="@drawable/ic_arrow_upward"
        app:tint="@color/white"
        android:alpha="0.9" />

    <!-- Scroll to Bottom Button (BOTTOM of chat area) -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabScrollToBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="20dp"
        android:contentDescription="Scroll to bottom"
        android:visibility="gone"
        app:backgroundTint="@color/button_danger_background"
        app:fabSize="mini"
        app:layout_constraintBottom_toBottomOf="@id/chatRecyclerView"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_arrow_downward"
        app:tint="@color/white"
        android:alpha="0.9" />

    <!-- Token Counter -->
    <TextView
        android:id="@+id/tvTokenCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/token_counter_background"
        android:paddingHorizontal="8dp"
        android:paddingVertical="4dp"
        android:text="0/4000"
        android:textColor="@color/text_secondary"
        android:textSize="12sp"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/chatRecyclerView" />

    <!-- Typing Indicator -->
    <TextView
        android:id="@+id/typingIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="?attr/colorOnSurface"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/chatRecyclerView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Selected Files Container -->
    <HorizontalScrollView
        android:id="@+id/selectedFilesScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginBottom="8dp"
        android:overScrollMode="never"
        android:scrollbars="none"
        app:layout_constraintBottom_toTopOf="@id/inputCardLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/selectedFilesContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        </LinearLayout>
    </HorizontalScrollView>


    <!-- Input Card Layout -->
    <!-- Input Card Layout -->
    <LinearLayout
        android:id="@+id/inputCardLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="0dp"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:background="@drawable/modern_input_background"
        android:elevation="4dp"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent">


    <!-- Text Input Field -->
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etInputText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Type a message..."
            android:inputType="textMultiLine"
            android:maxLines="10"
            android:minHeight="48dp"
            android:background="@null"
            android:paddingHorizontal="12dp"
            android:paddingVertical="8dp"
            android:textSize="16sp"
            android:textColorHint="@color/hint_color"/>

        <!-- OCR Options Panel -->
        <LinearLayout
            android:id="@+id/ocrOptionsPanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_gradient_background"
            android:padding="12dp"
            android:layout_marginTop="8dp"
            android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OCR Options"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp"/>

                <!-- Pages Selection -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pages:"
                        android:textSize="12sp"
                        android:layout_marginEnd="8dp"/>

                    <EditText
                        android:id="@+id/etOcrPages"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="e.g., 1-3 or 1,3,5 (empty = all)"
                        android:textSize="12sp"
                        android:background="@drawable/rounded_edit_text_background"
                        android:padding="6dp"/>
                </LinearLayout>

                <!-- Include Images Checkbox -->
                <CheckBox
                    android:id="@+id/cbIncludeImages"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Include images in response"
                    android:textSize="12sp"
                    android:layout_marginBottom="4dp"/>

                <!-- Image Settings -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Max images:"
                        android:textSize="12sp"
                        android:layout_marginEnd="4dp"/>

                    <EditText
                        android:id="@+id/etImageLimit"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:hint="10"
                        android:inputType="number"
                        android:textSize="12sp"
                        android:background="@drawable/rounded_edit_text_background"
                        android:padding="6dp"
                        android:layout_marginEnd="12dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Min size:"
                        android:textSize="12sp"
                        android:layout_marginEnd="4dp"/>

                    <EditText
                        android:id="@+id/etImageMinSize"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:hint="100"
                        android:inputType="number"
                        android:textSize="12sp"
                        android:background="@drawable/rounded_edit_text_background"
                        android:padding="6dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="px"
                        android:textSize="12sp"
                        android:layout_marginStart="4dp"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider_color"
                android:layout_marginVertical="8dp" />

            <!-- Buttons Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingTop="4dp">

                <!-- Attach Button -->
                <ImageButton
                    android:id="@+id/btnAttach"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Attach files"
                    android:padding="8dp"
                    app:srcCompat="@drawable/ic_attach"
                    app:tint="@color/colorPrimary"/>

                <!-- Reasoning Button -->
                <ImageButton
                    android:id="@+id/btnReasoning"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="4dp"
                    android:background="@drawable/circle_button_inactive"
                    android:contentDescription="Enable thinking"
                    android:padding="8dp"
                    app:srcCompat="@drawable/ic_thinking"
                    app:tint="@color/text_secondary"/>

                <!-- Web Search Button -->
                <ImageButton
                    android:id="@+id/btnDeepSearch"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="4dp"
                    android:background="@drawable/circle_button_inactive"
                    android:contentDescription="Enable web search"
                    android:padding="8dp"
                    app:srcCompat="@drawable/ic_search"
                    app:tint="@color/text_secondary"/>

                <!-- Expand Text Button (NEW) -->
                <ImageButton
                    android:id="@+id/btnExpandText"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="4dp"
                    android:background="@drawable/circle_button_inactive"
                    android:contentDescription="Expand text editor"
                    android:padding="8dp"
                    android:visibility="gone"
                    app:srcCompat="@drawable/ic_fullscreen"
                    app:tint="@color/colorPrimary"/>
                <ImageButton
                    android:id="@+id/btnAudioConversation"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="4dp"
                    android:background="@drawable/circle_button_active"
                    android:contentDescription="Start audio conversation"
                    android:padding="8dp"
                    android:visibility="gone"
                    app:srcCompat="@drawable/ic_phone"
                    app:tint="@color/white"/>

                <!-- Flexible space -->
                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <!-- Action Button Container -->
                <FrameLayout
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp">

                    <!-- Microphone Button -->
                    <ImageButton
                        android:id="@+id/btnMicrophone"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:background="@drawable/circular_button_background"
                        android:contentDescription="Voice input"
                        android:padding="10dp"
                        android:visibility="visible"
                        app:srcCompat="@drawable/ic_mic"
                        app:tint="@color/white"/>

                    <!-- Submit Button -->
                    <ImageButton
                        android:id="@+id/btnSubmitText"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:background="@drawable/circular_button_background"
                        android:contentDescription="Send message"
                        android:padding="10dp"
                        android:visibility="gone"
                        app:srcCompat="@drawable/send_icon"
                        app:tint="@color/white"/>
                </FrameLayout>
            </LinearLayout>
    </LinearLayout>


    <!-- Recording Overlay -->
    <androidx.cardview.widget.CardView
        android:id="@+id/recordingOverlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginBottom="12dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@color/colorPrimary"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="12dp">

            <ImageButton
                android:id="@+id/btnCancelRecording"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Cancel recording"
                android:padding="8dp"
                app:srcCompat="@drawable/ic_close"
                app:tint="@color/white"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <LinearLayout
                    android:id="@+id/waveformView"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginVertical="4dp">
                </LinearLayout>

                <TextView
                    android:id="@+id/tvRecordingTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:00"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/btnSendRecording"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/circular_button_white"
                    android:contentDescription="Send recording"
                    android:padding="8dp"
                    app:srcCompat="@drawable/send_icon"
                    app:tint="@color/colorPrimary"/>

                <ProgressBar
                    android:id="@+id/sendLoadingIndicator"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:visibility="gone"
                    android:indeterminateTint="@color/white"
                    android:padding="8dp"/>
            </FrameLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Hidden Reference Layout -->
    <LinearLayout
        android:id="@+id/reasoningControlsLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>