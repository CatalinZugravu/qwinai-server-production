<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="0dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/input_background_light"
    app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.TopRounded">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Header Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Edit message"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary" />

            <ImageButton
                android:id="@+id/btnCloseEdit"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_close"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Close"
                android:padding="4dp"
                app:tint="@color/text_secondary" />
        </LinearLayout>

        <!-- Edit Text Field -->
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etEditMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Edit your message..."
            android:inputType="textMultiLine"
            android:maxLines="12"
            android:minHeight="80dp"
            android:background="@null"
            android:paddingHorizontal="8dp"
            android:paddingVertical="8dp"
            android:textSize="16sp"
            android:gravity="top|start"
            android:scrollbars="vertical"
            android:importantForAutofill="no"
            android:textColorHint="@color/hint_color" />

        <!-- Token Counter (Optional) -->
        <TextView
            android:id="@+id/editTokenCounter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:text="0 tokens"
            android:textSize="12sp"
            android:textColor="@color/text_secondary"
            android:visibility="visible" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider_color"
            android:layout_marginVertical="8dp" />

        <!-- Buttons Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Reasoning Button -->
            <ImageButton
                android:id="@+id/btnEditReasoning"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="center_vertical"
                android:layout_marginHorizontal="4dp"
                android:background="@drawable/circle_button_inactive"
                android:contentDescription="Enable thinking"
                android:padding="8dp"
                app:srcCompat="@drawable/ic_thinking"
                app:tint="@color/text_secondary" />

            <!-- Web Search Button -->
            <ImageButton
                android:id="@+id/btnEditDeepSearch"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="center_vertical"
                android:layout_marginHorizontal="4dp"
                android:background="@drawable/circle_button_inactive"
                android:contentDescription="Enable web search"
                android:padding="8dp"
                app:srcCompat="@drawable/ic_search"
                app:tint="@color/text_secondary" />

            <!-- Expand Text Button (NEW - ADD THIS) -->
            <ImageButton
                android:id="@+id/btnEditExpandText"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="center_vertical"
                android:layout_marginHorizontal="4dp"
                android:background="@drawable/circle_button_inactive"
                android:contentDescription="Expand text editor"
                android:padding="8dp"
                android:visibility="gone"
                app:srcCompat="@drawable/ic_fullscreen"
                app:tint="@color/colorPrimary" />

            <!-- Flexible space -->
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <!-- Send Button -->
            <ImageButton
                android:id="@+id/btnSendEdit"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/circular_button_background"
                android:contentDescription="Send edited message"
                android:padding="10dp"
                app:srcCompat="@drawable/send_icon"
                app:tint="@color/white" />
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>