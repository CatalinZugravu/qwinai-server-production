<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ImageGenerationActivity">

    <!-- Top Bar -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="@color/white"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Back"
            android:src="@drawable/ic_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Image Generation"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/btnBack"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.45" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Empty State Container -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/emptyStateContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintBottom_toBottomOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/inputContainer">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Model Selection -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select AI Model"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <Spinner
                    android:id="@+id/spinnerImageModels"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/spinner_background"
                    android:padding="12dp"
                    android:layout_marginBottom="16dp" />

                <!-- Image Options -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginEnd="8dp">

                        <TextView
                            android:id="@+id/tvSizeLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Size"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp" />

                        <Spinner
                            android:id="@+id/spinnerSize"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/spinner_background"
                            android:padding="12dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="8dp">

                        <TextView
                            android:id="@+id/tvStyleLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Style"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp" />

                        <Spinner
                            android:id="@+id/spinnerStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/spinner_background"
                            android:padding="12dp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvQualityLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Quality"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp" />

                        <Spinner
                            android:id="@+id/spinnerQuality"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/spinner_background"
                            android:padding="12dp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Advanced Options Toggle -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Advanced Options"
                        android:textStyle="bold"
                        android:textSize="16sp" />

                    <ImageButton
                        android:id="@+id/btnAdvancedOptions"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_expand_more"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:layout_marginStart="8dp" />
                </LinearLayout>

                <!-- Advanced Options Container -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/advancedOptionsLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                    <!-- Negative Prompt (Stable Diffusion) -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/negativePromptLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/tvNegativePromptLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Negative Prompt"
                            android:textStyle="bold"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent" />

                        <EditText
                            android:id="@+id/etNegativePrompt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Elements to avoid (optional)"
                            android:inputType="textMultiLine"
                            android:minLines="2"
                            android:maxLines="4"
                            android:layout_marginTop="8dp"
                            app:layout_constraintTop_toBottomOf="@id/tvNegativePromptLabel" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <!-- Guidance Scale (Stable Diffusion) -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/guidanceScaleLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:layout_marginTop="16dp"
                        app:layout_constraintTop_toBottomOf="@id/negativePromptLayout">

                        <TextView
                            android:id="@+id/tvGuidanceScaleLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Guidance Scale"
                            android:textStyle="bold"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent" />

                        <TextView
                            android:id="@+id/tvGuidanceScaleValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="7.5"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent" />

                        <SeekBar
                            android:id="@+id/seekBarGuidanceScale"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:progress="65"
                            android:max="190"
                            app:layout_constraintTop_toBottomOf="@id/tvGuidanceScaleLabel" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <!-- Inference Steps (Stable Diffusion) -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/inferenceStepsLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:layout_marginTop="16dp"
                        app:layout_constraintTop_toBottomOf="@id/guidanceScaleLayout">

                        <TextView
                            android:id="@+id/tvInferenceStepsLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Inference Steps"
                            android:textStyle="bold"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent" />

                        <TextView
                            android:id="@+id/tvInferenceStepsValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="25"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent" />

                        <SeekBar
                            android:id="@+id/seekBarInferenceSteps"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:progress="24"
                            android:max="49"
                            app:layout_constraintTop_toBottomOf="@id/tvInferenceStepsLabel" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <!-- Safety Tolerance (Flux) -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/safetyToleranceLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:layout_marginTop="16dp"
                        app:layout_constraintTop_toBottomOf="@id/inferenceStepsLayout">

                        <TextView
                            android:id="@+id/tvSafetyToleranceLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Safety Tolerance"
                            android:textStyle="bold"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent" />

                        <TextView
                            android:id="@+id/tvSafetyToleranceValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent" />

                        <SeekBar
                            android:id="@+id/seekBarSafetyTolerance"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:progress="1"
                            android:max="5"
                            app:layout_constraintTop_toBottomOf="@id/tvSafetyToleranceLabel" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <!-- Raw Mode (Flux) -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/rawModeLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:layout_marginTop="16dp"
                        app:layout_constraintTop_toBottomOf="@id/safetyToleranceLayout">

                        <TextView
                            android:id="@+id/tvRawModeLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Raw Mode"
                            android:textStyle="bold"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipRawMode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Enable Raw Mode"
                            android:checkable="true"
                            app:layout_constraintTop_toBottomOf="@id/tvRawModeLabel"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginTop="8dp" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <!-- Colors (Recraft) -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/colorsLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:layout_marginTop="16dp"
                        app:layout_constraintTop_toBottomOf="@id/rawModeLayout">

                        <TextView
                            android:id="@+id/tvColorsLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Preferred Colors"
                            android:textStyle="bold"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent" />

                        <com.google.android.material.chip.ChipGroup
                            android:id="@+id/colorChipGroup"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@id/tvColorsLabel"
                            android:layout_marginTop="8dp" />

                        <Button
                            android:id="@+id/btnAddColor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Add Color"
                            android:textAllCaps="false"
                            app:layout_constraintTop_toBottomOf="@id/colorChipGroup"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginTop="8dp" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- Image description -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Image Description"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/etImagePrompt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Describe the image you want to generate..."
                    android:inputType="textMultiLine"
                    android:minLines="3"
                    android:padding="12dp"
                    android:background="@drawable/rounded_edit_text_background"
                    android:layout_marginBottom="16dp" />

                <!-- Message about credits -->
                <TextView
                    android:id="@+id/tvCreditsInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Image generation uses 5 credits (10 left)"
                    android:textSize="14sp"
                    android:textColor="@color/colorAccent"
                    android:layout_marginBottom="16dp" />

                <!-- Generate button -->
                <Button
                    android:id="@+id/btnGenerate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Generate Image"
                    android:padding="12dp"
                    android:background="@drawable/rounded_button_background"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:textSize="16sp" />

            </LinearLayout>
        </ScrollView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/inputContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            app:layout_constraintBottom_toBottomOf="parent">

            <!-- No input controls needed in empty state -->

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Loading State -->
    <androidx.cardview.widget.CardView
        android:id="@+id/loadingCard"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottieAnimationView"
                android:layout_width="200dp"
                android:layout_height="200dp"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/progressBar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintVertical_chainStyle="packed" />

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="8dp"
                android:indeterminate="true"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/lottieAnimationView"
                app:layout_constraintBottom_toTopOf="@id/tvGeneratingStatus"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_percent="0.7" />

            <TextView
                android:id="@+id/tvGeneratingStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Generating your image..."
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/progressBar"
                app:layout_constraintBottom_toTopOf="@id/tvGeneratingSubStatus"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/tvGeneratingSubStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This might take a moment"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/tvGeneratingStatus"
                app:layout_constraintBottom_toTopOf="@id/btnCancel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:layout_marginTop="24dp"
                android:background="@drawable/rounded_button_background"
                android:textColor="@color/white"
                android:textAllCaps="false"
                app:layout_constraintTop_toBottomOf="@id/tvGeneratingSubStatus"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <!-- Result State -->
    <androidx.cardview.widget.CardView
        android:id="@+id/imageResultCard"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvImageCaption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Generated with DALL-E 3"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintTop_toBottomOf="@id/tvImageCaption"
                app:layout_constraintBottom_toTopOf="@id/resultButtonsContainer"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/ivGeneratedImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitCenter"
                        android:adjustViewBounds="true"
                        android:contentDescription="Generated AI Image" />

                    <ProgressBar
                        android:id="@+id/imageLoadingIndicator"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_gravity="center"
                        android:visibility="gone" />

                </FrameLayout>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/resultButtonsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="parent">

                <Button
                    android:id="@+id/btnDownload"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Save"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:background="@drawable/rounded_button_background"
                    android:drawableStart="@drawable/ic_download"
                    android:paddingStart="16dp"
                    android:drawablePadding="8dp"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/btnShare"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Share"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:background="@drawable/rounded_button_background"
                    android:drawableStart="@drawable/ic_share"
                    android:paddingStart="16dp"
                    android:drawablePadding="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/btnRegenerateImage"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="New"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:background="@drawable/rounded_button_background"
                    android:drawableStart="@drawable/ic_add"
                    android:paddingStart="16dp"
                    android:drawablePadding="8dp"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>