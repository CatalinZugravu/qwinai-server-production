<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-compat"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:orientation="horizontal"
    android:padding="16dp"
    android:background="@drawable/premium_glass_card"
    android:gravity="center_vertical">

    <!-- Feature Icon -->
    <ImageView
        android:id="@+id/featureIcon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_checkmark_green"
        app:tint="?attr/colorPrimary"
        android:background="@drawable/circle_background"
        android:padding="6dp" />

    <!-- Feature Content -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/featureTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text="Feature Title"
            android:textColor="?attr/colorOnSurface"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/featureDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/source_sans_pro"
            android:text="Feature description goes here"
            android:textColor="?attr/colorOnSurface"
            android:textSize="14sp"
            android:alpha="0.8" />

    </LinearLayout>

    <!-- Checkmark -->
    <ImageView
        android:id="@+id/featureCheckmark"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="12dp"
        android:src="@drawable/ic_checkmark_green"
        app:tint="@color/success_color" />

</LinearLayout>