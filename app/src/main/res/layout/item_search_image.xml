<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="120dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:orientation="vertical"
    android:background="@drawable/search_image_background"
    android:padding="8dp">

    <ImageView
        android:id="@+id/searchImageView"
        android:layout_width="104dp"
        android:layout_height="104dp"
        android:scaleType="centerCrop"
        android:background="@drawable/image_placeholder_background"
        android:contentDescription="Search result image" />

    <TextView
        android:id="@+id/searchImageTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Image title"
        android:textSize="12sp"
        android:textColor="@color/text_primary"
        android:maxLines="2"
        android:ellipsize="end"
        android:lineSpacingMultiplier="1.1" />

    <TextView
        android:id="@+id/searchImageSource"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="Source"
        android:textSize="10sp"
        android:textColor="@color/text_secondary"
        android:maxLines="1"
        android:ellipsize="end" />

</LinearLayout>