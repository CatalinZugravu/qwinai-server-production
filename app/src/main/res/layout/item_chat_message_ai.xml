<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <!-- Main content container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Model Icon -->
        <ImageView
            android:id="@+id/ivModelIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="start"
            android:layout_marginStart="4dp"
            android:layout_marginBottom="8dp"
            tools:src="@drawable/ic_default_model" />

        <!-- Message container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:background="@drawable/ai_message_background"
            android:orientation="vertical"
            android:longClickable="true"
            android:padding="12dp">

            <!-- New Thinking Content Component -->
            <com.cyberflux.qwinai.components.ThinkingContentView
                android:id="@+id/thinkingContentView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:visibility="gone" />

            <!-- Main Message Content - Mixed Content Container with Integrated Loading Indicator -->
            <FrameLayout
                android:id="@+id/messageContentFrame"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <!-- Loading indicator in same position as content -->
                <LinearLayout
                    android:id="@+id/persistentIndicatorContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|top"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="0dp"
                    android:layout_margin="0dp">

                    <com.cyberflux.qwinai.components.PersistentLoadingIndicator
                        android:id="@+id/persistentLoadingIndicator"
                        style="?android:attr/progressBarStyleSmall"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginEnd="8dp" />

                    <!-- Status Text Container (can hide/show independently) -->
                    <LinearLayout
                        android:id="@+id/simpleStatusContainer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:visibility="gone">

                        <com.cyberflux.qwinai.components.ShimmerStatusWrapper
                            android:id="@+id/shimmerStatusWrapper"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/tvSimpleStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/StatusTextStyle"
                            android:visibility="gone"
                            tools:text="Generating..." />

                    </LinearLayout>

                </LinearLayout>

                <ScrollView
                    android:id="@+id/messageScrollView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fadeScrollbars="false"
                    android:scrollbars="vertical">

                    <!-- FIXED: LinearLayout to hold mixed content (text blocks + code blocks inline) -->
                    <LinearLayout
                        android:id="@+id/messageContentContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="0dp"
                        android:padding="0dp" />
                </ScrollView>
                
                <!-- Fade overlay for generating text effect -->
                <View
                    android:id="@+id/generatingTextFade"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/generating_text_fade_overlay"
                    android:visibility="gone" />
                    
            </FrameLayout>

            <!-- Metadata section (timestamp) -->
            <TextView
                android:id="@+id/tvTimestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="8dp"
                android:text="10:05 AM"
                style="@style/MessageTimestampStyle" />
        </LinearLayout>
    </LinearLayout>

    <!-- Web Search Sources (displayed at bottom after response is complete) -->
    <LinearLayout
        android:id="@+id/webSearchSourcesContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sources:"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="4dp" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/webSearchSourcesLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" />
        </HorizontalScrollView>
    </LinearLayout>

    <!-- File Download Card Container -->
    <LinearLayout
        android:id="@+id/fileDownloadContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:orientation="vertical"
        android:visibility="gone" />

    <!-- Button controls and navigation -->
    <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="start"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/sourcesContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:visibility="gone"
            app:cardCornerRadius="20dp"
            app:cardElevation="2dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/source_card_stroke"
            app:cardBackgroundColor="?attr/colorSurface">

            <LinearLayout
                android:id="@+id/sourcesButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:gravity="center_vertical"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">

                <!-- Source Icons Container -->
                <LinearLayout
                    android:id="@+id/sourcesIconContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginEnd="8dp" />

                <!-- Sources Count -->
                <TextView
                    android:id="@+id/sourcesCountText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5 sources"
                    android:textSize="14sp"
                    android:textColor="@color/primary_text" />

                <!-- Expand Icon -->
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginStart="4dp"
                    android:src="@drawable/ic_expand_more"
                    app:tint="@color/secondary_text" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:id="@+id/aiNavigationControls"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="2dp"
            android:visibility="gone">

            <ImageButton
                android:id="@+id/btnAiPrevious"
                style="?android:attr/borderlessButtonStyle"
                android:src="@drawable/left_arrow"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:padding="0dp"
                android:contentDescription="Previous"
                android:layout_marginEnd="2dp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tvAiNavigationIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1/2"
                android:textSize="12sp"
                android:textColor="@color/version_indicator"
                android:layout_marginEnd="4dp"
                android:visibility="gone"/>

            <ImageButton
                android:id="@+id/btnAiNext"
                style="?android:attr/borderlessButtonStyle"
                android:src="@drawable/right_arrow"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:padding="0dp"
                android:contentDescription="Next"
                android:layout_marginEnd="4dp"
                android:visibility="gone"/>
        </LinearLayout>

        <ImageButton
            android:id="@+id/btnReload"
            style="?android:attr/borderlessButtonStyle"
            android:src="@drawable/reload_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:padding="0dp"
            android:contentDescription="Reload"
            android:layout_marginStart="8dp"/>

        <ImageButton
            android:id="@+id/btnCopy"
            style="?android:attr/borderlessButtonStyle"
            android:src="@drawable/copy_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:padding="0dp"
            android:contentDescription="Copy"/>

        <ImageButton
            android:id="@+id/btnAudio"
            style="?android:attr/borderlessButtonStyle"
            android:src="@drawable/audio_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:padding="0dp"
            android:contentDescription="Play audio"
            android:visibility="gone"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <!-- Related Questions Section (Perplexity only) -->
    <LinearLayout
        android:id="@+id/relatedQuestionsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_related"
                app:tint="@color/text_secondary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Related"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/text_secondary" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/relatedQuestionsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </LinearLayout>

    <!-- Search Images Section (Perplexity only) -->
    <LinearLayout
        android:id="@+id/searchImagesContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_image_generation"
                app:tint="@color/text_secondary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Images"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/text_secondary" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/searchImagesRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:clipToPadding="false"
            android:paddingStart="0dp"
            android:paddingEnd="16dp" />
    </LinearLayout>

</LinearLayout>