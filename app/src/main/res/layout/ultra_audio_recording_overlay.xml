<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000">

    <!-- Holographic Background Gradients -->
    <View
        android:id="@+id/holoBackgroundPrimary"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/neural_holographic_background"
        android:alpha="0.3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/holoBackgroundSecondary"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/neural_holographic_background_secondary"
        android:alpha="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Main Recording Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/ultraRecordingCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="48dp"
        app:cardCornerRadius="32dp"
        app:cardElevation="24dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Glassmorphism Background -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:id="@+id/glassBackground"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ultra_glassmorphism_background" />

            <!-- Shimmer Overlay -->
            <View
                android:id="@+id/shimmerOverlay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ultra_shimmer_gradient"
                android:alpha="0.6" />

            <!-- Main Content -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="28dp"
                android:gravity="center">

                <!-- Neural Audio Visualizer -->
                <FrameLayout
                    android:id="@+id/neuralVisualizerContainer"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_marginBottom="24dp">

                    <!-- Outer Pulse Ring -->
                    <View
                        android:id="@+id/outerPulseRing"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/neural_pulse_ring_outer" />

                    <!-- Middle Pulse Ring -->
                    <View
                        android:id="@+id/middlePulseRing"
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:layout_gravity="center"
                        android:background="@drawable/neural_pulse_ring_middle" />

                    <!-- Inner Core -->
                    <View
                        android:id="@+id/innerCore"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center"
                        android:background="@drawable/neural_core_gradient" />

                    <!-- Dynamic Audio Bars -->
                    <LinearLayout
                        android:id="@+id/dynamicAudioBars"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_margin="40dp">

                        <!-- Audio bars will be dynamically added here -->
                    </LinearLayout>

                    <!-- Central Microphone Icon -->
                    <FrameLayout
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center">

                        <ImageView
                            android:id="@+id/centralMicIcon"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_mic"
                            android:scaleType="centerInside"
                            app:tint="@color/white"
                            android:alpha="0.9" />

                        <!-- Breathing glow around mic -->
                        <View
                            android:id="@+id/micBreathingGlow"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/breathing_glow_circle" />
                    </FrameLayout>
                </FrameLayout>

                <!-- Status Text -->
                <TextView
                    android:id="@+id/ultraStatusText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Listening..."
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppins_medium"
                    android:letterSpacing="0.05"
                    android:layout_marginBottom="8dp" />

                <!-- Subtitle -->
                <TextView
                    android:id="@+id/ultraSubtitleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Speak now and I'll understand you"
                    android:textColor="#CCFFFFFF"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins"
                    android:gravity="center"
                    android:layout_marginBottom="24dp"
                    android:alpha="0.8" />

                <!-- Real-time Transcript -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/transcriptCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="32dp"
                    android:visibility="gone"
                    app:cardCornerRadius="20dp"
                    app:cardBackgroundColor="#1A000000"
                    app:cardElevation="0dp">

                    <TextView
                        android:id="@+id/realtimeTranscript"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:fontFamily="@font/poppins"
                        android:gravity="center"
                        android:minHeight="48dp"
                        android:maxLines="3"
                        android:ellipsize="end" />
                </androidx.cardview.widget.CardView>

                <!-- Timer Display -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="32dp">

                    <View
                        android:id="@+id/recordingDot"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/recording_dot_animated" />

                    <TextView
                        android:id="@+id/ultraRecordingTimer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00:00"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/source_sans_pro_semibold"
                        android:letterSpacing="0.1" />
                </LinearLayout>

                <!-- Control Buttons Row -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <!-- Cancel Button -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/ultraCancelButton"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_marginEnd="48dp"
                        app:cardCornerRadius="32dp"
                        app:cardBackgroundColor="#33FF5252"
                        app:cardElevation="8dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackgroundBorderless">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_close"
                            app:tint="@color/white"
                            android:alpha="0.9" />
                    </androidx.cardview.widget.CardView>

                    <!-- Send Button -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/ultraSendButton"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginStart="48dp"
                        app:cardCornerRadius="40dp"
                        app:cardBackgroundColor="#FF4CAF50"
                        app:cardElevation="12dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackgroundBorderless">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/sendIcon"
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:layout_gravity="center"
                                android:src="@drawable/send_icon"
                                app:tint="@color/white" />

                            <ProgressBar
                                android:id="@+id/ultraSendProgress"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:layout_gravity="center"
                                android:visibility="gone"
                                android:indeterminateTint="@color/white" />
                        </FrameLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
    </androidx.cardview.widget.CardView>

    <!-- Floating particles for ambient effect -->
    <FrameLayout
        android:id="@+id/floatingParticlesContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <!-- Particles will be dynamically added here -->
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>