<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            android:background="@drawable/user_message_background"
            android:layout_gravity="end"
            android:layout_marginEnd="4dp"
            android:layout_marginStart="4dp"
            android:maxWidth="260dp">

            <TextView
                android:id="@+id/tvMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This is a user message..."
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:padding="8dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="end"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvTimestamp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10:05 AM"
                    android:textSize="12sp"
                    android:textColor="@color/black"/>

                <!-- Voice indicator icon -->
                <ImageView
                    android:id="@+id/ivVoiceIndicator"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginStart="4dp"
                    android:visibility="gone"
                    app:srcCompat="@drawable/ic_mic_small"
                    app:tint="#5E6AD2"/>
            </LinearLayout>

            <!-- Removed branch indicator from here, moved to top of layout -->
        </LinearLayout>
    </FrameLayout>

    <!-- Updated user message navigation controls with proper version indicator format -->
    <LinearLayout
        android:id="@+id/userNavigationControls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="end"
        android:layout_marginEnd="16dp"
        android:gravity="center_vertical"
        android:background="@drawable/rounded_version_control"
        android:padding="2dp"
        android:visibility="gone">

        <ImageButton
            android:id="@+id/btnPrevious"
            style="?android:attr/borderlessButtonStyle"
            android:src="@drawable/left_arrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:padding="0dp"
            android:contentDescription="Previous"
            android:layout_marginEnd="2dp"/>

        <TextView
            android:id="@+id/tvNavigationIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="&lt;1/2&gt;"
            android:textSize="12sp"
            android:textColor="@color/version_indicator"
            android:layout_marginEnd="4dp"/>

        <ImageButton
            android:id="@+id/btnNext"
            style="?android:attr/borderlessButtonStyle"
            android:src="@drawable/right_arrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:padding="0dp"
            android:contentDescription="Next"
            android:layout_marginEnd="4dp"/>
    </LinearLayout>
</LinearLayout>