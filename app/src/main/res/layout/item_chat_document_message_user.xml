<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/documentCardView"
        android:layout_width="165dp"
        android:layout_height="56dp"
        android:layout_gravity="end"
        android:layout_marginStart="55dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="4dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp"
        app:strokeWidth="0.7dp"
        app:strokeColor="@color/divider_color"
        app:cardBackgroundColor="@color/surface_variant">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:baselineAligned="false">

            <!-- Left side - Preview container -->
            <FrameLayout
                android:id="@+id/previewContainer"
                android:layout_width="56dp"
                android:layout_height="match_parent"
                android:background="@color/primary_surface">

                <ImageView
                    android:id="@+id/ivDocumentIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:contentDescription="Document icon"
                    android:src="@drawable/ic_document"/>
            </FrameLayout>

            <!-- Right side content container -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="8dp"
                android:paddingEnd="4dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp">

                <!-- File name -->
                <TextView
                    android:id="@+id/tvDocName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    tools:text="Document Name"/>

                <!-- File info layout -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="2dp">

                    <TextView
                        android:id="@+id/tvDocType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textColor="@color/text_secondary"
                        android:textSize="10sp"
                        tools:text="Document Type"/>

                    <TextView
                        android:id="@+id/tvDocSize"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textColor="@color/text_secondary"
                        android:textSize="9sp"
                        tools:text="File Size"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</FrameLayout>