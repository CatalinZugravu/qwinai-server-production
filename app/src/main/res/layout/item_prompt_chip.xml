<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.chip.Chip
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/promptChip"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="6dp"
    android:layout_marginBottom="6dp"
    android:text="Tell me a joke"
    android:textColor="?attr/colorOnSurface"
    android:textSize="14sp"
    android:fontFamily="@font/rubik_medium"
    android:textStyle="bold"
    android:elevation="0dp"
    app:chipCornerRadius="18dp"
    app:chipStrokeColor="?attr/colorOutlineVariant"
    app:chipStrokeWidth="1dp"
    app:chipBackgroundColor="?attr/colorSurface"
    app:rippleColor="?attr/colorControlHighlight"
    app:chipMinHeight="40dp"
    app:textEndPadding="8dp"
    app:textStartPadding="8dp"
    app:ensureMinTouchTargetSize="true"
    app:closeIconEnabled="false"
    app:chipIconEnabled="false"
    tools:text="Tell me a joke" />