<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Premium shadow -->
    <item android:top="5dp" android:left="3dp" android:right="3dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/premium_shadow_medium" />
            <corners android:radius="16dp" />
        </shape>
    </item>
    
    <!-- Platinum card base -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="135"
                android:startColor="#F8F9FA"
                android:centerColor="@color/luxury_platinum"
                android:endColor="#E2E8F0" />
            <corners android:radius="16dp" />
        </shape>
    </item>
    
    <!-- Platinum border -->
    <item>
        <shape android:shape="rectangle">
            <stroke 
                android:width="1dp" 
                android:color="@color/luxury_silver" />
            <corners android:radius="16dp" />
        </shape>
    </item>
    
    <!-- Subtle inner glow -->
    <item android:top="1dp" android:left="1dp" android:right="1dp" android:bottom="1dp">
        <shape android:shape="rectangle">
            <stroke 
                android:width="0.5dp" 
                android:color="@color/premium_glow_white" />
            <corners android:radius="15dp" />
        </shape>
    </item>
</layer-list>