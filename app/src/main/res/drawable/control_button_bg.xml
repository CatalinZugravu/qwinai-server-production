<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="#404040" />
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <gradient
                android:type="linear"
                android:angle="135"
                android:startColor="#3A3A3A"
                android:endColor="#2A2A2A" />
        </shape>
    </item>
</selector>
