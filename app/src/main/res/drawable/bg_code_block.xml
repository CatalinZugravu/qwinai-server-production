<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- Soft shadow via outer blur-style inset -->
    <solid android:color="@color/codeBlockBackground" />
    <corners android:radius="12dp" />
    <padding
        android:left="1dp"
        android:top="1dp"
        android:right="1dp"
        android:bottom="1dp" />
    <size android:width="0dp" android:height="0dp" />
    <stroke
        android:width="1dp"
        android:color="@color/codeBlockBorder" />
</shape>
