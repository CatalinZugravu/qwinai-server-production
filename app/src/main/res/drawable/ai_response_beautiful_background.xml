<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Ultra-Elegant Base Layer with Subtle Gradient -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="@color/ai_response_bg_gradient_start"
                android:centerColor="@color/ai_response_bg_gradient_mid"
                android:endColor="@color/ai_response_bg_gradient_end"
                android:type="linear" />
            <corners android:radius="16dp" />
        </shape>
    </item>
    
    <!-- Sophisticated Glass Effect Overlay -->
    <item android:top="0dp" android:left="0dp" android:right="0dp" android:bottom="0dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/ai_response_glass_subtle" />
            <corners android:radius="16dp" />
        </shape>
    </item>
    
    <!-- Premium Border with Ultra-Light Shadow -->
    <item android:top="0dp" android:left="0dp" android:right="0dp" android:bottom="0dp">
        <shape android:shape="rectangle">
            <stroke 
                android:width="1dp" 
                android:color="@color/ai_response_border_elegant" />
            <corners android:radius="16dp" />
        </shape>
    </item>
    
    <!-- Inner Highlight for Premium Depth -->
    <item android:top="1dp" android:left="1dp" android:right="1dp" android:bottom="1dp">
        <shape android:shape="rectangle">
            <stroke 
                android:width="0.5dp" 
                android:color="@color/ai_response_glass_white" />
            <corners android:radius="15dp" />
        </shape>
    </item>
    
</layer-list>