<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Deep shadow -->
    <item android:top="6dp" android:left="3dp" android:right="3dp" android:bottom="3dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/premium_shadow_deep" />
            <corners android:radius="18dp" />
        </shape>
    </item>
    
    <!-- Main obsidian card -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="135"
                android:startColor="@color/premium_card_charcoal"
                android:centerColor="@color/premium_card_obsidian"
                android:endColor="@color/premium_obsidian" />
            <corners android:radius="18dp" />
        </shape>
    </item>
    
    <!-- Luxury gold border -->
    <item>
        <shape android:shape="rectangle">
            <stroke 
                android:width="1dp" 
                android:color="@color/luxury_gold_dark" />
            <corners android:radius="18dp" />
        </shape>
    </item>
    
    <!-- Inner gold highlight -->
    <item android:top="1dp" android:left="1dp" android:right="1dp" android:bottom="1dp">
        <shape android:shape="rectangle">
            <stroke 
                android:width="0.5dp" 
                android:color="@color/luxury_gold_light" />
            <corners android:radius="17dp" />
        </shape>
    </item>
</layer-list>