<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Premium glass base -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="0"
                android:startColor="@color/glass_black_15"
                android:centerColor="@color/glass_black_10"
                android:endColor="@color/premium_card_charcoal" />
        </shape>
    </item>
    
    <!-- Gold accent top line -->
    <item android:bottom="55dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/luxury_gold_dark" />
        </shape>
    </item>
</layer-list>