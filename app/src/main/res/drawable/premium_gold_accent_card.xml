<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Deep gold shadow -->
    <item android:top="4dp" android:left="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/premium_glow_gold" />
            <corners android:radius="18dp" />
        </shape>
    </item>
    
    <!-- Gold gradient card -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="135"
                android:startColor="#FFF8DC"
                android:centerColor="@color/luxury_gold_light"
                android:endColor="@color/luxury_gold" />
            <corners android:radius="18dp" />
        </shape>
    </item>
    
    <!-- Rich gold border -->
    <item>
        <shape android:shape="rectangle">
            <stroke 
                android:width="1.5dp" 
                android:color="@color/luxury_gold_dark" />
            <corners android:radius="18dp" />
        </shape>
    </item>
    
    <!-- Inner light highlight -->
    <item android:top="2dp" android:left="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <stroke 
                android:width="0.5dp" 
                android:color="#FFFACD" />
            <corners android:radius="16dp" />
        </shape>
    </item>
</layer-list>