<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Deep shadow layer -->
    <item android:top="4dp" android:left="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/premium_shadow_deep" />
            <corners android:radius="20dp" />
        </shape>
    </item>
    
    <!-- Glass card layer -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="135"
                android:startColor="@color/glass_white_20"
                android:centerColor="@color/glass_white_15"
                android:endColor="@color/glass_white_10" />
            <stroke 
                android:width="1dp" 
                android:color="@color/glass_white_15" />
            <corners android:radius="20dp" />
        </shape>
    </item>
    
    <!-- Gold accent rim -->
    <item android:top="1dp" android:left="1dp" android:right="1dp" android:bottom="1dp">
        <shape android:shape="rectangle">
            <stroke 
                android:width="0.5dp" 
                android:color="@color/luxury_gold_light" />
            <corners android:radius="19dp" />
        </shape>
    </item>
</layer-list>